---
/**
 * Displaced Sphere
 *
 * Based on: https://github.com/pavel-mazhuga/codrops-tutorial-distorted-sphere-custom-material
 * Creates an animated displaced sphere with custom shaders
 *
 * Features:
 * - Animated organic displacement pattern
 * - Color changes based on category card hover
 * - Smooth color transitions
 * - Responsive to window resize
 *
 * Props:
 * @param {string} defaultColor - Default color for the sphere (optional, will use --variant-primary CSS variable if not provided)
 * @param {number} sphereRadius - Radius of the sphere (default: 1.3)
 * @param {number} sphereDetail - Detail level/subdivisions of the sphere (default: 200)
 * @param {number} zoomLevel - Zoom level multiplier for camera distance (default: 0.6, lower = more zoom)
 * @param {number} sphereVerticalPosition - Vertical position offset of the sphere (default: 0.5, relative to radius)
 * @param {number} initialX - Initial X position offset (default: 0)
 * @param {number} initialY - Initial Y position offset (default: 0)
 * @param {number} initialZ - Initial Z position offset (default: 0)
 * @param {number} initialScale - Initial scale (default: 1.0)
 * @param {number} initialBlur - Initial blur amount (0-1, default: 0)
 * @param {number} animationDelay - Delay before animation starts in ms (default: 0)
 * @param {number} animationDuration - Animation duration in ms (default: 2000)
 * @param {number} maxParallaxOffset - Maximum parallax offset for Y position in world units (default: 0, disabled)
 *                                     Positive values move sphere down as you scroll, negative moves it up
 * @param {number} initialParallaxOffset - Initial parallax offset value (default: 0)
 *                                         This sets the starting parallax offset before scroll begins
 */
interface Props {
  defaultColor?: string;
  sphereRadius?: number;
  sphereDetail?: number;
  zoomLevel?: number;
  sphereVerticalPosition?: number;
  initialX?: number;
  initialY?: number;
  initialZ?: number;
  initialScale?: number;
  initialBlur?: number;
  animationDelay?: number;
  animationDuration?: number;
  maxParallaxOffset?: number;
  initialParallaxOffset?: number;
}

const {
  defaultColor, // Will be read from CSS custom property if not provided
  sphereRadius = 1,
  sphereDetail = 400,
  zoomLevel = 0.6, // Lower values = more zoom (0.6 = 60% of base distance)
  sphereVerticalPosition = 0.45, // Vertical offset relative to sphere radius (0.5 = half radius up)
  initialX = 0,
  initialY = 0,
  initialZ = 0,
  initialScale = 1.0,
  initialBlur = 0,
  animationDelay = 0,
  animationDuration = 2000,
  maxParallaxOffset = 0,
  initialParallaxOffset = 0,
} = Astro.props;

// Use lower detail for initial render, then enhance
const initialDetail = Math.min(50, Math.floor(sphereDetail / 8));
const targetDetail = sphereDetail;
---

<div id="sphere-background" class="fixed inset-0 pointer-events-none">
  <canvas id="sphere-canvas" aria-hidden="true"></canvas>
  <div
    id="sphere-loading"
    class="absolute inset-0 bg-gradient-to-b from-transparent to-transparent opacity-0 transition-opacity duration-500"
    aria-hidden="true"
  >
  </div>
</div>

<script>
  // Find the parent section element to get its height
  const sphereBackground = document.getElementById('sphere-background');
  const parentSection = sphereBackground?.closest('section');

  if (parentSection) {
    // Store reference for use in the main script
    window.__sphereParentSection = parentSection;
  }
</script>

<script
  type="module"
  defer
  define:vars={{
    defaultColor,
    sphereRadius,
    sphereDetail,
    zoomLevel,
    sphereVerticalPosition,
    initialX,
    initialY,
    initialZ,
    initialScale,
    initialBlur,
    animationDelay,
    animationDuration,
    initialDetail,
    targetDetail,
    maxParallaxOffset,
    initialParallaxOffset,
    baseUrl: import.meta.env.BASE_URL,
  }}
>
  // Defer initialization to avoid blocking initial render
  const initSphere = async () => {
    // Wait for idle time or use setTimeout as fallback
    if ('requestIdleCallback' in window) {
      await new Promise((resolve) => {
        requestIdleCallback(resolve, { timeout: 2000 });
      });
    } else {
      await new Promise((resolve) => setTimeout(resolve, 100));
    }

    // Check if component is visible using IntersectionObserver
    const canvas = document.getElementById('sphere-canvas');
    if (!canvas) return;

    // Use IntersectionObserver to only initialize when visible
    const observer = new IntersectionObserver(
      (entries) => {
        if (entries[0].isIntersecting) {
          observer.disconnect();
          initializeThreeJS();
        }
      },
      { rootMargin: '50px' }
    );

    observer.observe(canvas);

    // Fallback: initialize after 1 second if still not visible
    setTimeout(() => {
      if (observer) {
        observer.disconnect();
        initializeThreeJS();
      }
    }, 1000);
  };

  const initializeThreeJS = async () => {
    // Show loading state
    const loadingEl = document.getElementById('sphere-loading');
    if (loadingEl) {
      loadingEl.style.opacity = '0.3';
    }

    // Import Three.js from vendor directory (lazy load)
    const THREE = await import(`${baseUrl}/vendor/three.module.min.js`);

    // Helper function to get CSS custom property value and convert to hex
    function getCSSColor(cssVarName) {
      const root = document.documentElement;
      let value = getComputedStyle(root).getPropertyValue(cssVarName).trim();

      if (!value) return null;

      // If value is a reference to another CSS variable, resolve it recursively
      while (value.startsWith('var(')) {
        const innerVar = value.match(/var\(([^)]+)\)/)?.[1];
        if (innerVar) {
          value = getComputedStyle(root).getPropertyValue(innerVar.trim()).trim();
        } else {
          break;
        }
      }

      if (!value) return null;

      // Handle RGB values separated by spaces (e.g., "76 138 255")
      // or by commas (e.g., "76, 138, 255")
      const rgbMatch = value.match(/(\d+)\s*[, ]\s*(\d+)\s*[, ]\s*(\d+)/);
      if (rgbMatch) {
        const r = parseInt(rgbMatch[1]);
        const g = parseInt(rgbMatch[2]);
        const b = parseInt(rgbMatch[3]);
        // Convert to hex format for Three.js
        return `#${[r, g, b]
          .map((x) => {
            const hex = x.toString(16);
            return hex.length === 1 ? '0' + hex : hex;
          })
          .join('')}`;
      }

      // If value is already in hex format or other valid color format, return as is
      return value;
    }

    // Get colors from CSS custom properties
    const primaryColor = defaultColor || getCSSColor('--variant-primary') || '#ff1493';
    const categoryColors = {
      'user-centered-design': getCSSColor('--variant-user-centered-design') || '#3b82f6',
      'design-systems': getCSSColor('--variant-design-systems') || '#8b5cf6',
      'hax-principles': getCSSColor('--variant-hax-principles') || '#10b981',
    };

    const canvas = document.getElementById('sphere-canvas');
    if (!canvas) {
      // console.warn('DisplacedSphere: Canvas not found');
      return;
    }

    // Scene setup
    const scene = new THREE.Scene();
    const camera = new THREE.PerspectiveCamera(
      45,
      window.innerWidth / window.innerHeight,
      0.1,
      1000
    );

    // Get parent section height instead of viewport height
    // @ts-ignore - Custom property on window
    const parentSection = window.__sphereParentSection || canvas.closest('section');
    const containerHeight = parentSection ? parentSection.clientHeight : window.innerHeight;

    // Calculate camera distance based on container height
    // This makes the sphere fill almost the entire container height
    // We're showing only the top half, so we use sphereRadius
    const fovRad = (45 * Math.PI) / 180;
    const visibleSphereHeight = sphereRadius; // We're showing top half

    // Calculate distance based on container height
    // Convert container height to world space and calculate camera distance
    const baseCameraDistance = visibleSphereHeight / Math.tan(fovRad / 2);
    const cameraDistance = baseCameraDistance * zoomLevel;

    // Position camera relative to sphere vertical position
    camera.position.set(0, -sphereRadius * sphereVerticalPosition, cameraDistance);

    const renderer = new THREE.WebGLRenderer({
      canvas: canvas,
      antialias: true,
      alpha: true,
    });
    renderer.setSize(window.innerWidth, window.innerHeight);
    // Limit pixel ratio for better performance
    renderer.setPixelRatio(Math.min(window.devicePixelRatio, 1.5));

    // Lighting
    const ambientLight = new THREE.AmbientLight(0xffffff, 0.5);
    scene.add(ambientLight);

    const directionalLight = new THREE.DirectionalLight(0xffffff, 5);
    directionalLight.position.set(-2, -2, 3.5); // Moved light down (negative Y)
    scene.add(directionalLight);

    // Helper function to process geometry attributes (split into chunks for non-blocking)
    const processGeometryAttributes = (geo, computeTangentsNow = false) => {
      // Ensure normals exist
      if (!geo.hasAttribute('normal')) {
        geo.computeVertexNormals();
      }

      // Create UV coordinates if missing (must be done before indexing)
      if (!geo.hasAttribute('uv')) {
        const positionAttribute = geo.getAttribute('position');
        const vertexCount = positionAttribute.count;
        const uvs = new Float32Array(vertexCount * 2);

        // Generate spherical UV coordinates
        for (let i = 0; i < vertexCount; i++) {
          const x = positionAttribute.getX(i);
          const y = positionAttribute.getY(i);
          const z = positionAttribute.getZ(i);

          // Convert 3D position to spherical coordinates, then to UV
          const u = Math.atan2(x, z) / (2 * Math.PI) + 0.5;
          const v = Math.asin(y) / Math.PI + 0.5;

          uvs[i * 2] = u;
          uvs[i * 2 + 1] = v;
        }

        geo.setAttribute('uv', new THREE.BufferAttribute(uvs, 2));
      }

      // Ensure geometry is indexed (required for computeTangents)
      if (geo.index === null) {
        const positionAttribute = geo.getAttribute('position');
        const vertexCount = positionAttribute.count;
        const triangleCount = vertexCount / 3;
        const indices = new Uint32Array(triangleCount * 3);

        for (let i = 0; i < triangleCount; i++) {
          indices[i * 3] = i * 3;
          indices[i * 3 + 1] = i * 3 + 1;
          indices[i * 3 + 2] = i * 3 + 2;
        }

        geo.setIndex(new THREE.BufferAttribute(indices, 1));
      }

      let hasTangents = false;
      if (computeTangentsNow) {
        const hasIndex = geo.index !== null;
        const hasPosition = geo.hasAttribute('position');
        const hasNormal = geo.hasAttribute('normal');
        const hasUV = geo.hasAttribute('uv');

        if (hasIndex && hasPosition && hasNormal && hasUV && geo.computeTangents) {
          try {
            geo.computeTangents();
            hasTangents = geo.hasAttribute('tangent');
          } catch (tangentError) {
            hasTangents = false;
          }
        }
      }

      return hasTangents;
    };

    // Create geometry with lower initial detail for faster first render
    const initialGeometry = new THREE.IcosahedronGeometry(sphereRadius, initialDetail);
    let mergedGeometry = initialGeometry;
    let hasTangents = processGeometryAttributes(mergedGeometry, true);

    // Shader uniforms
    let currentColor = primaryColor;
    let targetColor = primaryColor;
    const uniforms = {
      uTime: { value: 0 },
      uColor: { value: new THREE.Color(primaryColor) },
      uDisplacementStrength: { value: 0.15 },
      uNoiseStrength: { value: 0.5 },
      uFractAmount: { value: 8.0 },
      uSpeed: { value: 0.1 }, // Further reduced for slower animation
      uBlur: { value: initialBlur },
    };

    // Classic Perlin 3D Noise function
    const noiseShader = `
      vec4 permute(vec4 x){return mod(((x*34.0)+1.0)*x, 289.0);}
      vec4 taylorInvSqrt(vec4 r){return 1.79284291400159 - 0.85373472095314 * r;}
      vec3 fade(vec3 t) {return t*t*t*(t*(t*6.0-15.0)+10.0);}

      float cnoise(vec3 P){
        vec3 Pi0 = floor(P);
        vec3 Pi1 = Pi0 + vec3(1.0);
        Pi0 = mod(Pi0, 289.0);
        Pi1 = mod(Pi1, 289.0);
        vec3 Pf0 = fract(P);
        vec3 Pf1 = Pf0 - vec3(1.0);
        vec4 ix = vec4(Pi0.x, Pi1.x, Pi0.x, Pi1.x);
        vec4 iy = vec4(Pi0.yy, Pi1.yy);
        vec4 iz0 = Pi0.zzzz;
        vec4 iz1 = Pi1.zzzz;

        vec4 ixy = permute(permute(ix) + iy);
        vec4 ixy0 = permute(ixy + iz0);
        vec4 ixy1 = permute(ixy + iz1);

        vec4 gx0 = ixy0 / 7.0;
        vec4 gy0 = fract(floor(gx0) / 7.0) - 0.5;
        gx0 = fract(gx0);
        vec4 gz0 = vec4(0.5) - abs(gx0) - abs(gy0);
        vec4 sz0 = step(gz0, vec4(0.0));
        gx0 -= sz0 * (step(0.0, gx0) - 0.5);
        gy0 -= sz0 * (step(0.0, gy0) - 0.5);

        vec4 gx1 = ixy1 / 7.0;
        vec4 gy1 = fract(floor(gx1) / 7.0) - 0.5;
        gx1 = fract(gx1);
        vec4 gz1 = vec4(0.5) - abs(gx1) - abs(gy1);
        vec4 sz1 = step(gz1, vec4(0.0));
        gx1 -= sz1 * (step(0.0, gx1) - 0.5);
        gy1 -= sz1 * (step(0.0, gy1) - 0.5);

        vec3 g000 = vec3(gx0.x,gy0.x,gz0.x);
        vec3 g100 = vec3(gx0.y,gy0.y,gz0.y);
        vec3 g010 = vec3(gx0.z,gy0.z,gz0.z);
        vec3 g110 = vec3(gx0.w,gy0.w,gz0.w);
        vec3 g001 = vec3(gx1.x,gy1.x,gz1.x);
        vec3 g101 = vec3(gx1.y,gy1.y,gz1.y);
        vec3 g011 = vec3(gx1.z,gy1.z,gz1.z);
        vec3 g111 = vec3(gx1.w,gy1.w,gz1.w);

        vec4 norm0 = taylorInvSqrt(vec4(dot(g000, g000), dot(g010, g010), dot(g100, g100), dot(g110, g110)));
        g000 *= norm0.x;
        g010 *= norm0.y;
        g100 *= norm0.z;
        g110 *= norm0.w;
        vec4 norm1 = taylorInvSqrt(vec4(dot(g001, g001), dot(g011, g011), dot(g101, g101), dot(g111, g111)));
        g001 *= norm1.x;
        g011 *= norm1.y;
        g101 *= norm1.z;
        g111 *= norm1.w;

        float n000 = dot(g000, Pf0);
        float n100 = dot(g100, vec3(Pf1.x, Pf0.yz));
        float n010 = dot(g010, vec3(Pf0.x, Pf1.y, Pf0.z));
        float n110 = dot(g110, vec3(Pf1.xy, Pf0.z));
        float n001 = dot(g001, vec3(Pf0.xy, Pf1.z));
        float n101 = dot(g101, vec3(Pf1.x, Pf0.y, Pf1.z));
        float n011 = dot(g011, vec3(Pf0.x, Pf1.yz));
        float n111 = dot(g111, Pf1);

        vec3 fade_xyz = fade(Pf0);
        vec4 n_z = mix(vec4(n000, n100, n010, n110), vec4(n001, n101, n011, n111), fade_xyz.z);
        vec2 n_yz = mix(n_z.xy, n_z.zw, fade_xyz.y);
        float n_xyz = mix(n_yz.x, n_yz.y, fade_xyz.x);
        return 2.2 * n_xyz;
      }
    `;

    // Smooth mod function
    const smoothModShader = `
      float smoothMod(float x, float y, float e) {
        float top = cos(3.14159 * (x / y - 0.5)) * 0.5 + 0.5;
        float bot = cos(3.14159 * (x / y + 0.5)) * 0.5 + 0.5;
        float p = (top - bot) / (top + bot);
        return (mod(x, y) - y / 2.0) * p + y / 2.0;
      }
    `;

    // Displacement function
    const displacementShader = `
      uniform float uTime;
      uniform float uDisplacementStrength;
      uniform float uNoiseStrength;
      uniform float uFractAmount;
      uniform float uSpeed;

      float getDisplacement(vec3 pos) {
        pos.y += uTime * 0.5 * uSpeed;
        pos += cnoise(pos * 1.65) * uNoiseStrength;
        return smoothMod(pos.y * uFractAmount, 1., 1.5) * uDisplacementStrength;
      }
    `;

    // Create material with custom shader modification
    const material = new THREE.MeshPhysicalMaterial({
      roughness: 0.56,
      metalness: 0.76,
      clearcoat: 0,
      ior: 2.81,
      iridescence: 0.96,
      color: new THREE.Color(primaryColor),
      transparent: true, // Enable transparency for blur effect
    });

    // Modify shader using onBeforeCompile
    material.onBeforeCompile = (shader) => {
      // Add uniforms
      shader.uniforms.uTime = uniforms.uTime;
      shader.uniforms.uColor = uniforms.uColor;
      shader.uniforms.uDisplacementStrength = uniforms.uDisplacementStrength;
      shader.uniforms.uNoiseStrength = uniforms.uNoiseStrength;
      shader.uniforms.uFractAmount = uniforms.uFractAmount;
      shader.uniforms.uSpeed = uniforms.uSpeed;
      shader.uniforms.uBlur = uniforms.uBlur;

      // Build shader code based on whether tangents are available
      // Following the tutorial: https://tympanus.net/codrops/2024/07/09/creating-an-animated-displaced-sphere-with-a-custom-three-js-material/
      const tangentAttribute = hasTangents ? 'attribute vec4 tangent;' : '';

      // Add noise and displacement functions to vertex shader
      shader.vertexShader = shader.vertexShader.replace(
        '#include <common>',
        `#include <common>
        ${noiseShader}
        ${smoothModShader}
        ${displacementShader}

        varying float vPattern;
        ${tangentAttribute}
        `
      );

      // Apply displacement in vertex shader
      // Following tutorial Step 4 exactly: https://tympanus.net/codrops/2024/07/09/creating-an-animated-displaced-sphere-with-a-custom-three-js-material/
      shader.vertexShader = shader.vertexShader.replace(
        '#include <project_vertex>',
        `
        float pattern = getDisplacement(position);
        vPattern = pattern;

        ${
          hasTangents
            ? `
        // Neighbours technique: find two vectors perpendicular to normal and each other
        vec3 biTangent = cross(normal, tangent.xyz);
        float shift = 0.01; // approximate distance to the neighbour
        vec3 posA = position + tangent.xyz * shift; // position of neighbour A
        vec3 posB = position + biTangent * shift; // position of neighbour B

        // Move position according to normal (displacement) - this is csm_Position in the tutorial
        transformed += normal * pattern;

        // Apply displacement to neighbours
        posA += normal * getDisplacement(posA);
        posB += normal * getDisplacement(posB);

        // Calculate direction between two vectors
        // Subtract destination from origin, then normalize
        // IMPORTANT: Use transformed (displaced position) not position
        vec3 toA = normalize(posA - transformed);
        vec3 toB = normalize(posB - transformed);

        // Recalculated normal using cross product
        transformedNormal = normalize(cross(toA, toB));
        `
            : `
        // Fallback: simpler normal recalculation without tangents
        vec3 posX = position + vec3(0.01, 0.0, 0.0);
        vec3 posZ = position + vec3(0.0, 0.0, 0.01);

        // Move position according to normal (displacement)
        transformed += normal * pattern;

        // Apply displacement to neighbours
        posX += normal * getDisplacement(posX);
        posZ += normal * getDisplacement(posZ);

        vec3 toX = normalize(posX - transformed);
        vec3 toZ = normalize(posZ - transformed);
        transformedNormal = normalize(cross(toX, toZ));
        `
        }

        #include <project_vertex>
        `
      );

      // Modify fragment shader to use custom color and blur
      shader.fragmentShader = shader.fragmentShader.replace(
        '#include <common>',
        `#include <common>
        uniform vec3 uColor;
        uniform float uBlur;
        varying float vPattern;
        `
      );

      // Apply color and blur in fragment shader
      shader.fragmentShader = shader.fragmentShader.replace(
        '#include <color_fragment>',
        `
        #include <color_fragment>
        vec3 baseColor = mix(diffuseColor.rgb, uColor, 0.8) * (0.5 + vPattern * 0.5);

        // Apply blur effect: reduce intensity, add glow, and reduce alpha
        // Blur creates a softer, more diffused appearance
        float blurFactor = uBlur;
        vec3 blurredColor = mix(baseColor, baseColor * 0.2, blurFactor);

        // Add glow effect for blur
        vec3 glowColor = mix(blurredColor, uColor * 0.5, blurFactor * 0.3);

        // Reduce alpha for transparency effect
        diffuseColor.a *= (1.0 - blurFactor * 0.5);

        // Apply final color with blur
        diffuseColor.rgb = mix(baseColor, glowColor, blurFactor);
        `
      );
    };

    // Create mesh
    const sphere = new THREE.Mesh(mergedGeometry, material);

    // Set initial position, scale, and rotation
    const finalY = sphereRadius * sphereVerticalPosition;

    // Calculate initial and final positions correctly
    // X is always centered (ignored)
    const initialPosition = {
      x: 0, // Always centered on X axis
      y: initialY + finalY,
      z: initialZ,
    };
    const finalPosition = {
      x: 0, // Always centered on X axis
      y: finalY,
      z: 0,
    };
    const finalScale = 1.0;
    const finalBlur = 0;

    // Set initial state
    sphere.position.set(initialPosition.x, initialPosition.y, initialPosition.z);
    sphere.scale.set(initialScale, initialScale, initialScale);
    uniforms.uBlur.value = initialBlur;

    // Apply initial CSS blur
    if (canvas && initialBlur > 0) {
      const blurAmount = initialBlur * 20.0;
      canvas.style.filter = `blur(${blurAmount}px)`;
      canvas.style.opacity = 1.0 - initialBlur * 0.3;
    }

    scene.add(sphere);

    // Animation state
    let animationStartTime = null;
    let isAnimating = false;

    // Parallax state for smooth interpolation
    // Initialize to initialParallaxOffset to set starting parallax value
    // This ensures smooth transition from initial animation to parallax
    let targetParallaxOffset = initialParallaxOffset;
    let currentParallaxOffset = initialParallaxOffset;

    // Easing function (ease-out-expo)
    const easeOutExpo = (t) => {
      return t === 1 ? 1 : 1 - Math.pow(2, -10 * t);
    };

    // Start animation after delay (wait for first render)
    const startAnimation = () => {
      const start = () => {
        animationStartTime = performance.now();
        isAnimating = true;
        // console.log('DisplacedSphere: Animation started', {
        //   initialPosition,
        //   finalPosition,
        //   initialScale,
        //   finalScale,
        //   initialBlur,
        //   finalBlur
        // });
      };

      if (animationDelay > 0) {
        setTimeout(start, animationDelay);
      } else {
        // Small delay to ensure first frame is rendered
        requestAnimationFrame(() => {
          requestAnimationFrame(start);
        });
      }
    };

    // Render first frame with initial values before starting animation
    renderer.render(scene, camera);

    startAnimation();

    // Progressive enhancement: upgrade to higher detail after initial animation completes
    // This prevents the geometry upgrade from blocking the initial animation
    if (targetDetail > initialDetail) {
      const upgradeGeometry = () => {
        // Wait until initial animation is complete
        const checkAnimationComplete = () => {
          if (!isAnimating) {
            // Animation complete, now upgrade geometry
            const upgrade = () => {
              const highDetailGeometry = new THREE.IcosahedronGeometry(sphereRadius, targetDetail);
              processGeometryAttributes(highDetailGeometry, true);

              // Replace geometry smoothly
              sphere.geometry.dispose();
              sphere.geometry = highDetailGeometry;
            };

            // Use requestIdleCallback to upgrade geometry when browser is idle
            if ('requestIdleCallback' in window) {
              requestIdleCallback(upgrade, { timeout: 1000 });
            } else {
              setTimeout(upgrade, 200);
            }
          } else {
            // Animation still running, check again in next frame
            requestAnimationFrame(checkAnimationComplete);
          }
        };

        // Start checking after a small delay to ensure animation has started
        setTimeout(() => {
          requestAnimationFrame(checkAnimationComplete);
        }, 100);
      };

      // Start upgrade process after initial render
      requestAnimationFrame(() => {
        requestAnimationFrame(upgradeGeometry);
      });
    }

    // Color transition function
    function updateColor() {
      const currentR = parseInt(currentColor.slice(1, 3), 16);
      const currentG = parseInt(currentColor.slice(3, 5), 16);
      const currentB = parseInt(currentColor.slice(5, 7), 16);

      const targetR = parseInt(targetColor.slice(1, 3), 16);
      const targetG = parseInt(targetColor.slice(3, 5), 16);
      const targetB = parseInt(targetColor.slice(5, 7), 16);

      const newR = Math.round(currentR + (targetR - currentR) * 0.05);
      const newG = Math.round(currentG + (targetG - currentG) * 0.05);
      const newB = Math.round(currentB + (targetB - currentB) * 0.05);

      currentColor = `#${newR.toString(16).padStart(2, '0')}${newG.toString(16).padStart(2, '0')}${newB.toString(16).padStart(2, '0')}`;

      uniforms.uColor.value.set(currentColor);
      material.color.set(currentColor);
    }

    // Setup category card hover handlers
    function setupCategoryHovers() {
      const categoryCards = document.querySelectorAll('[data-category-id]');

      categoryCards.forEach((card) => {
        const categoryId = card.getAttribute('data-category-id');
        const color = categoryColors[categoryId];

        if (color) {
          card.addEventListener('mouseenter', () => {
            targetColor = color;
          });

          card.addEventListener('mouseleave', () => {
            targetColor = primaryColor;
          });
        }
      });
    }

    setupCategoryHovers();

    // Animation loop
    let time = 0;
    let lastFrameTime = performance.now();
    let firstFrameRendered = false;

    function animate() {
      requestAnimationFrame(animate);

      // Calculate delta time for smooth animation regardless of frame rate
      const currentTime = performance.now();
      const deltaTime = Math.min((currentTime - lastFrameTime) / 1000, 0.1); // Cap at 100ms
      lastFrameTime = currentTime;

      // Update time for displacement animation (always running for fluid effect)
      time += deltaTime;
      uniforms.uTime.value = time;

      // Handle initial animation (position, scale, blur)
      if (isAnimating && animationStartTime !== null) {
        const elapsed = performance.now() - animationStartTime;
        const progress = Math.min(elapsed / animationDuration, 1);
        const eased = easeOutExpo(progress);

        // Animate position
        // X is always centered (ignored)
        sphere.position.x = 0; // Always centered on X axis
        sphere.position.y = THREE.MathUtils.lerp(initialPosition.y, finalPosition.y, eased);
        sphere.position.z = THREE.MathUtils.lerp(initialPosition.z, finalPosition.z, eased);

        // Animate scale
        const currentScale = THREE.MathUtils.lerp(initialScale, finalScale, eased);
        sphere.scale.set(currentScale, currentScale, currentScale);

        // Animate blur
        const currentBlur = THREE.MathUtils.lerp(initialBlur, finalBlur, eased);
        uniforms.uBlur.value = currentBlur;

        // Apply CSS filter blur for visual effect
        if (canvas) {
          const blurAmount = currentBlur * 20.0; // Max 20px blur
          canvas.style.filter = blurAmount > 0 ? `blur(${blurAmount}px)` : 'none';
          canvas.style.opacity = 1.0 - currentBlur * 0.3; // Slight opacity reduction
        }

        // Stop animation when complete
        if (progress >= 1) {
          isAnimating = false;
          // Initialize parallax offset to initialParallaxOffset when animation completes
          // This ensures smooth transition from initial animation to parallax
          if (maxParallaxOffset !== 0) {
            currentParallaxOffset = initialParallaxOffset;
            targetParallaxOffset = initialParallaxOffset;
          }
        }
      }

      // Apply parallax offset to Y position with smooth interpolation
      if (maxParallaxOffset !== 0 && !isAnimating) {
        // Calculate parallax directly in animation loop for smooth, frame-synced updates
        const categorySection = document.getElementById('category-cards-section');
        if (categorySection) {
          const windowHeight = window.innerHeight;
          const sectionRect = categorySection.getBoundingClientRect();
          const sectionTop = sectionRect.top;

          // Calculate when animation should start and end
          const startPoint = windowHeight;
          const endPoint = -windowHeight * 0.5;

          // Calculate progress (0 to 1)
          const progress = Math.min(
            Math.max((startPoint - sectionTop) / (startPoint - endPoint), 0),
            1
          );

          // Calculate target parallax offset
          // Start from initialParallaxOffset and add parallax based on scroll progress
          const targetOffset = initialParallaxOffset + progress * maxParallaxOffset;

          // Smoothly interpolate current offset towards target
          // Use exponential smoothing for very smooth movement
          // Higher factor = more responsive, lower = smoother
          const smoothingFactor = 0.01; // Adjust this (0.1-0.3 range works well)
          currentParallaxOffset += (targetOffset - currentParallaxOffset) * smoothingFactor;

          // Apply parallax offset to sphere Y position
          // This smoothly transitions from initial position to final + parallax
          sphere.position.y = finalPosition.y + currentParallaxOffset;
        }
      }

      // Rotate sphere slowly (further reduced speed)
      sphere.rotation.y += 0.0001;

      // Update color
      updateColor();

      // Always render to maintain fluid animation
      renderer.render(scene, camera);

      // Hide loading state once first frame is rendered
      if (!firstFrameRendered) {
        firstFrameRendered = true;
        if (loadingEl) {
          loadingEl.style.opacity = '0';
          setTimeout(() => {
            if (loadingEl && loadingEl.parentNode) {
              loadingEl.style.display = 'none';
            }
          }, 500);
        }
      }
    }

    animate();

    // Parallax scroll effect for sphere Y position
    // Parallax is calculated directly in the animate loop using native scroll
    // No need for locomotive-scroll or separate initialization

    // Handle resize
    function onResize() {
      const width = window.innerWidth;
      const height = window.innerHeight;

      // Get parent section height instead of viewport height
      // @ts-ignore - Custom property on window
      const parentSection = window.__sphereParentSection || canvas.closest('section');
      const containerHeight = parentSection ? parentSection.clientHeight : height;

      camera.aspect = width / height;

      // Recalculate camera distance based on container height
      // This makes the sphere fill almost the entire container height
      const fovRad = (45 * Math.PI) / 180;
      const visibleSphereHeight = sphereRadius; // We're showing top half
      const baseCameraDistance = visibleSphereHeight / Math.tan(fovRad / 2);
      const cameraDistance = baseCameraDistance * zoomLevel;

      // Maintain camera position relative to sphere vertical position
      camera.position.set(0, -sphereRadius * sphereVerticalPosition, cameraDistance);

      camera.updateProjectionMatrix();

      renderer.setSize(width, height);
    }

    window.addEventListener('resize', onResize);

    // Also listen for section size changes using ResizeObserver
    const parentSectionForObserver = window.__sphereParentSection || canvas.closest('section');
    if (parentSectionForObserver && window.ResizeObserver) {
      const resizeObserver = new ResizeObserver(() => {
        onResize();
      });
      resizeObserver.observe(parentSectionForObserver);
    }

    // console.log('DisplacedSphere: Initialized', { sphereRadius, sphereDetail });
  };

  // Start initialization
  initSphere();
</script>

