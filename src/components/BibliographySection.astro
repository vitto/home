---
import Icon from './Icon.astro';

interface Props {
  type: 'book' | 'url' | 'video';
  class?: string;
}

const { type, class: className = '' } = Astro.props;

const icon = {
  book: 'mi/outline/menu-book',
  url: 'mi/outline/desktop-windows',
  video: 'mi/outline/local-movies',
};
---

<div class={`grid gap-600 bibliography-section ${className}`}>
  <Icon class="text-3xl" name={icon[type]} />
  <div class="text-title-h4">
    {type === 'book' && 'Books'}
    {type === 'url' && 'Articles & Online Resources'}
    {type === 'video' && 'Videos'}
  </div>
  <div class="grid gap-1200">
    <slot />
  </div>
</div>
