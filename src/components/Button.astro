---
/**
 * Button Component
 *
 * Renders a button/link with consistent styling and security attributes
 *
 * Props:
 * @param {string} href - Link URL (if not provided, renders as button element)
 * @param {string} class - Additional CSS classes to add (base "button" class is always included)
 * @param {number} tabIndex - Tab index for the button
 * @param {string} variant - Button variant (e.g., "outline", "light", "hero", or color variants)
 */
interface Props {
  href?: string;
  class?: string;
  tabIndex?: number;
  title?: string;
  variant?: string;
}

const { href, class: className = '', tabIndex = 0, variant = 'none', title = '' } = Astro.props;

// Extract data-* attributes from props
const dataAttributes: Record<string, string> = {};
Object.keys(Astro.props).forEach((key) => {
  if (key.startsWith('data-')) {
    dataAttributes[key] = (Astro.props as any)[key];
  }
});

// Map variant names to CSS classes
const variants: Record<string, string> = {
  none: '',
  back: 'text-tone-neutral-03 bg-tone-neutral-09 border-none hover:bg-tone-neutral-08 focus-visible:bg-tone-neutral-08 p-200 px-600',
  outline:
    'border-tone-neutral-01/10 hover:border-tone-neutral-01/20 focus-visible:border-tone-neutral-01/20',
  light:
    'text-tone-neutral-02 border-tone-neutral hover:bg-tone-neutral/30 focus-visible:bg-tone-neutral/30',
  hero: 'text-tone-neutral bg-transparent border-transparent hover:bg-tone-neutral-01/30 focus-visible:bg-tone-neutral-01/30',
};

const variantClass = variants[variant] || '';

// Build class string: always include "button", add variant if provided, then additional classes
const buttonClasses = [
  'button first-letter:uppercase no-underline inline-flex items-center justify-center',
  variant === 'back' ? 'rounded-l-full rounded-r-none -mr-400' : 'px-300 py-100 gap-200',
  'border-2 border-solid rounded-full',
  'cursor-pointer focus-bounce',
  variantClass,
  className,
]
  .filter(Boolean)
  .join(' ');

// Add target="_blank" and rel attributes only for external links (http/https)
const isExternalLink = href ? /^https?:\/\//.test(href) : false;
const linkAttrs = isExternalLink
  ? {
      target: '_blank',
      rel: 'noopener noreferrer',
    }
  : {};
---

{
  href ? (
    <a
      class={buttonClasses}
      href={href}
      {...linkAttrs}
      {...dataAttributes}
      tabindex={tabIndex}
      title={title}
    >
      <slot />
    </a>
  ) : (
    <button
      class={buttonClasses}
      type="button"
      {...dataAttributes}
      tabindex={tabIndex}
      title={title}
    >
      <slot />
    </button>
  )
}
