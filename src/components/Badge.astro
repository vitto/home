---
/**
 * Badge Component
 *
 * Displays a category badge with color variants
 *
 * Props:
 * @param {string} variant - Color variant (e.g., "status-success", "label-blue")
 * @param {string} class - Additional CSS classes
 */
interface Props {
  variant?: string;
  class?: string;
}

const { variant = 'none', class: className = '' } = Astro.props;

// Map color names to CSS classes
const colorClasses: Record<string, string> = {
  none: '',
  'status-success': 'text-status-success-05 border-status-success-06/30',
  'status-info': 'text-status-info-05 border-status-info-06/30',
  'status-error': 'text-status-error-05 border-status-error-06/30',
  'status-warning': 'text-status-warning-05 border-status-warning-06/30',
  'label-amaranth': 'text-label-amaranth-05 border-label-amaranth-06/30',
  'label-orchid': 'text-label-orchid-05 border-label-orchid-06/30',
  'label-violet': 'text-label-violet-05 border-label-violet-06/30',
  'label-blue': 'text-label-blue-05 border-label-blue-06/30',
  'label-sky': 'text-label-sky-05 border-label-sky-06/30',
  'label-aqua': 'text-label-aqua-05 border-label-aqua-06/30',
  'label-green': 'text-label-green-05 border-label-green-06/30',
  'label-lime': 'text-label-lime-05 border-label-lime-06/30',
  'label-yellow': 'text-label-yellow-05 border-label-yellow-06/30',
  'label-orange': 'text-label-orange-05 border-label-orange-06/30',
};

const variantColorClass = colorClasses[variant];
const combinedClasses =
  `inline-flex px-100 py-50 rounded-md text-info-label ${variantColorClass} ${className}`.trim();
---

<span class={combinedClasses}>
  <slot />
</span>
