---
import Icon from './Icon.astro';

/**
 * HeaderButton Component
 *
 * Renders a header menu button with title and description
 *
 * Props:
 * @param {string} title - Button title (e.g., "UCD", "DS", "HCAID")
 * @param {string} description - Button description (e.g., "User Centered Design")
 * @param {string} class - Additional CSS classes
 * @param {string} defaultClass - Default CSS classes
 * @param {string} selectedClass - Selected CSS classes
 * @param {string} icon - Optional icon name
 * @param {string} href - Link URL (defaults to "#")
 * @param {boolean} selected - Optional selected state
 */
interface Props {
  title: string;
  description: string;
  class?: string;
  defaultClass?: string;
  selectedClass?: string;
  icon?: string;
  selected?: boolean;
  href?: string;
}
const defaultSelectedClass = 'bg-tone-neutral-03 hover:bg-tone-neutral-01 text-tone-neutral';
const {
  title,
  description,
  defaultClass = 'hover:bg-tone-neutral-09 dark:hover:bg-tone-neutral-08',
  selectedClass,
  class: className = '',
  icon,
  selected = false,
  href = '#',
} = Astro.props;
---

<a
  href={href}
  title={`Go to ${description}`}
  class={`header-button self-center focus-bounce inline-flex justify-start items-center gap-400 mobile:gap-300 rounded-full tablet:px-600 p-300 no-underline ${className} ${selected ? (selectedClass ?? defaultSelectedClass) : defaultClass + ' z-10'}`}
>
  {icon && <Icon name={icon} />}
  <div class="grid gap-200 auto-rows-min">
    <span class="text-title-h6" aria-hidden="true">{title}</span>
    <span class="text-info-option">{description}</span>
  </div>
</a>
