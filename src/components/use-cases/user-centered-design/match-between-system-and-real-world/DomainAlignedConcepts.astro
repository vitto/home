---
import UseCase from '../../../UseCase.astro';
import UseCaseInteractive from '../../../UseCaseInteractive.astro';
import CreditCard from '../../CreditCard.astro';
---

<UseCase
  title="Domain-Aligned Concepts"
  description="The system reflects the user's mental model of the domain, not the internal system model."
>
  <UseCaseInteractive clsHeight={461} toggle>
    <div class="w-full max-w-8000 grid gap-600">
      <mds-text typography="h3">Wallet</mds-text>
      <mds-text typography="h5">Credit Cards</mds-text>
      <div class="grid gap-200 auto-rows-min bg-tone-slate-09 p-200 rounded-3xl">
        <CreditCard
          cardNumber="4875 5478 4474 4485"
          icon="mi/outline/pets"
          name="MonsterCard"
          backgroundColor="bg-label-orange-05"
        />
        <CreditCard
          cardNumber="4875 5478 4474 4485"
          name="GRANA"
          icon="mi/outline/toll"
          backgroundColor="bg-label-green-05"
        />
        <CreditCard
          cardNumber="4875 5478 4474 4485"
          name="European Express"
          icon="mi/outline/euro"
          backgroundColor="bg-label-sky-05"
        />
      </div>
      <mds-button>Send money</mds-button>
    </div>
    <div class="w-full max-w-8000 grid gap-600">
      <mds-text typography="h3">Money Assets</mds-text>
      <mds-text typography="h5">Payment Resources</mds-text>
      <mds-table>
        <mds-table-header>
          <mds-table-header-cell label="Credit Card"></mds-table-header-cell>
          <mds-table-header-cell label="Code"></mds-table-header-cell>
        </mds-table-header>
        <mds-table-body>
          <mds-table-row>
            <mds-table-cell>MonsterCard</mds-table-cell>
            <mds-table-cell>2544 4573 6422 1185</mds-table-cell>
          </mds-table-row>
        </mds-table-body>
        <mds-table-body>
          <mds-table-row>
            <mds-table-cell>GRANA</mds-table-cell>
            <mds-table-cell>3365 9911 6571 2398</mds-table-cell>
          </mds-table-row>
        </mds-table-body>
        <mds-table-body>
          <mds-table-row>
            <mds-table-cell>European Express</mds-table-cell>
            <mds-table-cell>4875 5478 4474 4485</mds-table-cell>
          </mds-table-row>
        </mds-table-body>
      </mds-table>
