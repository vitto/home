---
import Usage from '../../../Usage.astro';
import UsageItem from '../../../UsageItem.astro';
import UseCase from '../../../UseCase.astro';
import UseCaseInteractive from '../../../UseCaseInteractive.astro';
---

<UseCase
  title="Recognition-Based Navigation"
  description="Navigation relies on recognition of familiar patterns and labels, not memory of paths or commands."
>
  <UseCaseInteractive
    clsHeight={228}
    articleId="recognition-based-navigation"
    label="Tabs with content"
  >
    <mds-tab class="w-full max-w-8000" fill>
      <mds-tab-item selected>News</mds-tab-item>
      <mds-tab-item>Sports</mds-tab-item>
      <mds-tab-item>Weather</mds-tab-item>
      <div
        slot="content"
        class="min-h-4000 mt-400 flex flex-col rounded-lg items-center justify-center bg-label-blue-10 fill-label-blue-04 text-label-blue-04"
      >
        <mds-icon name="mdi/newspaper"></mds-icon>
        <mds-text typography="detail">News</mds-text>
      </div>
      <div
        slot="content"
        class="min-h-4000 mt-400 flex flex-col rounded-lg items-center justify-center bg-label-orange-10 fill-label-orange-04 text-label-orange-04"
      >
        <mds-icon name="mdi/basketball"></mds-icon>
        <mds-text typography="detail">Sports</mds-text>
      </div>
      <div
        slot="content"
        class="min-h-4000 mt-400 flex flex-col rounded-lg items-center justify-center bg-label-green-10 fill-label-green-04 text-label-green-04"
      >
        <mds-icon name="mdi/weather-sunny"></mds-icon>
        <mds-text typography="detail">Weather</mds-text>
      </div>
    </mds-tab>
  </UseCaseInteractive>
  <Usage>
    <UsageItem variant="do">Use clear and familiar navigation labels</UsageItem>
    <UsageItem variant="dont">Rely on hidden or memorized navigation paths</UsageItem>
    <UsageItem variant="do">Provide breadcrumbs for orientation</UsageItem>
    <UsageItem variant="dont">Force users to remember where they are</UsageItem>
    <UsageItem variant="do">Keep navigation patterns consistent</UsageItem>
    <UsageItem variant="dont">Change navigation behavior across screens</UsageItem>
  </Usage>
</UseCase>
