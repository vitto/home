---
import Usage from '../../../Usage.astro';
import UsageItem from '../../../UsageItem.astro';
import UseCase from '../../../UseCase.astro';
import UseCaseInteractive from '../../../UseCaseInteractive.astro';
import Wizard from '../../Wizard.astro';
---

<UseCase
  title="Contextual Cues"
  description="The interface provides visual or textual cues that remind users what to do next."
>
  <UseCaseInteractive
    clsHeight={462}
    articleId="contextual-cues"
    label="Step-by-step wizards with the current step highlighted"
  >
    <Wizard articleId="contextual-cues" />
  </UseCaseInteractive>
  <Usage>
    <UsageItem variant="do">Show progress and next steps</UsageItem>
    <UsageItem variant="dont">Rely on user memory of the process</UsageItem>
    <UsageItem variant="do">Guide users with inline prompts</UsageItem>
    <UsageItem variant="dont">Assume users know the next step</UsageItem>
    <UsageItem variant="do">Use empty states to explain actions</UsageItem>
    <UsageItem variant="dont">Leave empty screens unexplained</UsageItem>
  </Usage>
</UseCase>
