---
import Usage from '../../../Usage.astro';
import UsageItem from '../../../UsageItem.astro';
import UseCase from '../../../UseCase.astro';
import UseCaseInteractive from '../../../UseCaseInteractive.astro';
import Wizard from '../../Wizard.astro';
---

<UseCase
  title="Concrete, Actionable Guidance"
  description="Help and documentation should provide concrete steps that users can directly apply. Instructions must avoid vague language and clearly explain what to do, where to do it, and what outcome to expect."
>
  <UseCaseInteractive
    clsHeight={462}
    articleId="concrete-actionable-guidance"
    label="Step-by-step wizards with the current step highlighted"
  >
    <Wizard articleId="concrete-actionable-guidance" />
  </UseCaseInteractive>
  <Usage>
    <UsageItem variant="do">Provide step-by-step instructions</UsageItem>
    <UsageItem variant="dont">Use vague or abstract language</UsageItem>
    <UsageItem variant="do">Specify where actions should be performed</UsageItem>
    <UsageItem variant="dont">Assume users know where to find features</UsageItem>
    <UsageItem variant="do">Explain expected outcomes clearly</UsageItem>
    <UsageItem variant="dont">Leave users guessing about results</UsageItem>
  </Usage>
</UseCase>
