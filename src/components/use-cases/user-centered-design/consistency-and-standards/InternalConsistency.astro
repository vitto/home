---
import UseCase from '../../../UseCase.astro';
import UseCaseInteractive from '../../../UseCaseInteractive.astro';
const baseUrl = import.meta.env.BASE_URL;
---

<UseCase
  title="Internal Consistency"
  description="The system behaves the same way in similar situations, so users can rely on patterns they have already learned."
>
  <UseCaseInteractive clsHeight={396} multiple>
    <mds-zero class="max-w-8000">
      <mds-img class="w-3200 h-3200" src={`${baseUrl}/assets/icon-3d-folder.png`}></mds-img>
      <mds-text slot="content" typography="h5">Create your first folder</mds-text>
      <mds-text slot="content" typography="detail">
        Organize your files and folders in a structured way.
      </mds-text>
      <mds-button class="max-mobile:w-full" size="lg" slot="action">New folder</mds-button>
    </mds-zero>
    <mds-zero class="max-w-8000">
      <mds-img class="w-3200 h-3200" src={`${baseUrl}/assets/icon-3d-contact.png`}></mds-img>
      <mds-text slot="content" typography="h5">Add your first contact</mds-text>
      <mds-text slot="content" typography="detail">
        Add your first contact to your address book.
      </mds-text>
      <mds-button class="max-mobile:w-full" size="lg" slot="action">New contact</mds-button>
    </mds-zero>
  </UseCaseInteractive>
</UseCase>
