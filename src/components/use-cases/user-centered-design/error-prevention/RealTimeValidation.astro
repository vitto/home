---
import UseCase from '../../../UseCase.astro';
import UseCaseInteractive from '../../../UseCaseInteractive.astro';
---

<UseCase
  title="Real-Time Validation"
  description="Errors are caught while the user is acting, not after submission, reducing frustration and rework."
>
  <UseCaseInteractive clsHeight={298}>
    <form class="grid gap-600 w-full">
      <mds-input-upload max-file-size="0.25" max-files="3" accept="image/*"></mds-input-upload>
    </form>
  </UseCaseInteractive>
</UseCase>
