---
import Usage from '../../../Usage.astro';
import UsageItem from '../../../UsageItem.astro';
import UseCase from '../../../UseCase.astro';
import UseCaseInteractive from '../../../UseCaseInteractive.astro';
---

<UseCase
  title="Constraint-Based Design"
  description="The interface prevents errors by limiting what users can do, making invalid actions impossible rather than recoverable."
>
  <UseCaseInteractive
    clsHeight={72}
    overflowHidden={false}
    label="Date range"
    articleId="constraint-based-design"
    bugComponent="mds-input-date-range"
    bugExpected="Actually, there is no way to change the font style of the date range."
    bugCurrent="Fonts should be easier to customize."
    contentClass="z-20 relative justify-center items-center gap-400"
  >
    <mds-input-field label="booking date" class="max-w-9600 w-full">
      <mds-input-date-range>
        <mds-input-date slot="start"></mds-input-date>
        <mds-input-date slot="end"></mds-input-date>
      </mds-input-date-range>
    </mds-input-field>
  </UseCaseInteractive>
  <Usage>
    <UsageItem variant="do">Constrain inputs to valid options</UsageItem>
    <UsageItem variant="dont">Allow invalid data and handle it later</UsageItem>
    <UsageItem variant="do">Guide users with progressive disclosure</UsageItem>
    <UsageItem variant="dont">Overwhelm users with unrestricted choices</UsageItem>
    <UsageItem variant="do">Prevent impossible states by design</UsageItem>
    <UsageItem variant="dont">Rely solely on error messages for prevention</UsageItem>
  </Usage>
</UseCase>
