---
import UseCase from '../../../UseCase.astro';
import UseCaseInteractive from '../../../UseCaseInteractive.astro';
---

<UseCase
  title="Goal Focus"
  description="Each screen is designed around a primary user task, avoiding feature accumulation and distraction."
>
  <UseCaseInteractive clsHeight={120} toggle articleId="goal-focus">
    <mds-banner icon="mi/outline/assignment" headline="Delete project" variant="error" tone="weak">
      <mds-text typography="detail"
        >Are you sure you want to delete this project?<br /> This action cannot be undone.</mds-text
      >
      <mds-button slot="action" variant="dark" tone="quiet">Cancel</mds-button>
      <mds-button slot="action" icon="mi/outline/delete" variant="error" tone="strong">
        Delete
      </mds-button>
    </mds-banner>
    <mds-banner icon="mi/outline/assignment" headline="Delete project" variant="error" tone="weak">
      <mds-text typography="detail"
        >Are you sure you want to delete this project?<br /> This action cannot be undone.</mds-text
      >
      <mds-button slot="action" variant="dark" tone="strong">Cancel</mds-button>
      <mds-button slot="action" icon="mi/outline/list" variant="dark" tone="strong">
        Projects List
      </mds-button>
      <mds-button slot="action" icon="mi/outline/delete" variant="error" tone="strong">
        Delete
      </mds-button>
    </mds-banner>
  </UseCaseInteractive>
</UseCase>
