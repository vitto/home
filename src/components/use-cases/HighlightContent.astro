---
/**
 * HighlightContent Component
 *
 * Highlighted content box with an animated border and a label tag above it.
 *
 * Props:
 * @param {string} label - Label text to display above the content
 * @param {string} class - Additional CSS classes for the container
 */
interface Props {
  label: string;
  class?: string;
}

const { label, class: className = '' } = Astro.props;
---

<div
  class={`grid highlight-content pointer-events-none bg-blend-multiply mix-blend-multiply dark:bg-blend-lighten dark:mix-blend-lighten z-20 absolute inset-0 -top-200 mobile:-left-200 mobile:-right-200 auto-rows-min gap-200 border-50 animate-alarm-border border-solid rounded-2xl p-400 pt-0 -m-400 mobile:mx-0 min-w-3200 ${className}`}
  data-highlight-content
>
  <div
    class="highlight-content-label text-info-option p-100 px-200 text-tone-neutral rounded-b-lg justify-self-start relative"
  >
    {label}
  </div>
  <slot />
</div>
