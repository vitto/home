---
import Brand from '../../../Brand.astro';
import ProductCategory from '../../../ProductCategory.astro';
import Products from '../../../Products.astro';
import Usage from '../../../Usage.astro';
import UsageItem from '../../../UsageItem.astro';
import UseCase from '../../../UseCase.astro';
import UseCaseInteractive from '../../../UseCaseInteractive.astro';
---

<UseCase
  title="Balance stability and progress"
  description="Not all parts of the system should evolve at the same pace."
>
  <UseCaseInteractive clsHeight={320} label="System layers evolution">
    <mds-table class="w-full">
      <mds-table-header>
        <mds-table-header-cell label="Layer"></mds-table-header-cell>
        <mds-table-header-cell label="Stability"></mds-table-header-cell>
        <mds-table-header-cell label="Change Frequency"></mds-table-header-cell>
        <mds-table-header-cell label="Example"></mds-table-header-cell>
      </mds-table-header>
      <mds-table-body>
        <mds-table-row>
          <mds-table-cell>
            <mds-text typography="caption"><strong>Foundations</strong></mds-text>
          </mds-table-cell>
          <mds-table-cell>
            <mds-badge variant="success" tone="weak" size="sm" class="whitespace-nowrap">
              Very Stable
            </mds-badge>
          </mds-table-cell>
          <mds-table-cell>
            <mds-text typography="caption">Rarely</mds-text>
          </mds-table-cell>
          <mds-table-cell>
            <mds-text typography="caption">Design tokens, color system</mds-text>
          </mds-table-cell>
        </mds-table-row>
        <mds-table-row>
          <mds-table-cell>
            <mds-text typography="caption"><strong>Primitives</strong></mds-text>
          </mds-table-cell>
          <mds-table-cell>
            <mds-badge variant="success" tone="weak" size="sm" class="whitespace-nowrap">
              Stable
            </mds-badge>
          </mds-table-cell>
          <mds-table-cell>
            <mds-text typography="caption">Occasionally</mds-text>
          </mds-table-cell>
          <mds-table-cell>
            <mds-text typography="caption">Base components (Button, Input)</mds-text>
          </mds-table-cell>
        </mds-table-row>
        <mds-table-row>
          <mds-table-cell>
            <mds-text typography="caption"><strong>Components</strong></mds-text>
          </mds-table-cell>
          <mds-table-cell>
            <mds-badge variant="info" tone="weak" size="sm" class="whitespace-nowrap">
              Moderate
            </mds-badge>
          </mds-table-cell>
          <mds-table-cell>
            <mds-text typography="caption">Regularly</mds-text>
          </mds-table-cell>
          <mds-table-cell>
            <mds-text typography="caption">Composite components (Card, Modal)</mds-text>
          </mds-table-cell>
        </mds-table-row>
        <mds-table-row>
          <mds-table-cell>
            <mds-text typography="caption"><strong>Patterns</strong></mds-text>
          </mds-table-cell>
          <mds-table-cell>
            <mds-badge variant="warning" tone="weak" size="sm" class="whitespace-nowrap">
              Evolving
            </mds-badge>
          </mds-table-cell>
          <mds-table-cell>
            <mds-text typography="caption">Frequently</mds-text>
          </mds-table-cell>
          <mds-table-cell>
            <mds-text typography="caption">Usage patterns, compositions</mds-text>
          </mds-table-cell>
        </mds-table-row>
      </mds-table-body>
    </mds-table>
  </UseCaseInteractive>
</UseCase>

<Usage>
  <UsageItem variant="do">Keep foundations stable while iterating on higher layers.</UsageItem>
  <UsageItem variant="dont">Change tokens and primitives frequently.</UsageItem>
  <UsageItem variant="do">Evaluate impact before introducing breaking changes.</UsageItem>
  <UsageItem variant="dont">Optimize for short-term speed over long-term health.</UsageItem>
</Usage>

<Products>
  <ProductCategory title="Semantic versioning">
    <Brand icon="mi/outline/commit" label="Semver" url="https://semver.org/" />
  </ProductCategory>
  <ProductCategory title="Visual regression testing">
    <Brand name="chromatic" label="Chromatic" />
    <Brand name="percy" label="Percy" />
  </ProductCategory>
</Products>
