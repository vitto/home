---
import UseCase from '../../../UseCase.astro';
import Usage from '../../../Usage.astro';
import UsageItem from '../../../UsageItem.astro';
import Markdown from '../../../../components/Markdown.astro';
import Separator from '../../../../components/Separator.astro';
import UseCaseInteractive from '../../../UseCaseInteractive.astro';
import Brand from '../../../Brand.astro';
import ProductCategory from '../../../ProductCategory.astro';
import Products from '../../../Products.astro';
import CodeSnippet from '../../../CodeSnippet.astro';
---

<UseCase
  title="Accepting inconsistencies to enable onboarding"
  description="Some inconsistencies are tolerated temporarily to avoid breaking existing products or workflows."
>
  <CodeSnippet
    title="If you are using React"
    code={`<!--
  In react options are not treated
  with its standard attributes,
  this breaks the component
-->
<MdsInputSelect>
  <option value="1">Option 1</option>
  <option value="2">Option 2</option>
  <option value="3">Option 3</option>
</MdsInputSelect>

<!--
  Use the web-component directly
  even if it doesn't benefit from
  the react wrapper
-->
<mds-input-select>
  <option value="1">Option 1</option>
  <option value="2">Option 2</option>
  <option value="3">Option 3</option>
</mds-input-select>
`}
  />
</UseCase>

<Usage>
  <UsageItem variant="do">Allow transitional states when migrating to the system.</UsageItem>
  <UsageItem variant="dont">
    Enforce strict compliance that blocks teams from adopting the system.
  </UsageItem>
  <UsageItem variant="do">Document known limitations and planned improvements.</UsageItem>
  <UsageItem variant="dont">Introduce breaking changes prematurely.</UsageItem>
</Usage>

<Products>
  <ProductCategory title="Migration guides">
    <Brand name="zeroheight" label="Zeroheight" />
  </ProductCategory>
  <ProductCategory title="Documentation tools">
    <Brand name="notion" label="Notion" />
    <Brand name="confluence" label="Confluence" />
  </ProductCategory>
</Products>

<Separator />
