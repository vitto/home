---
import Brand from '../../../Brand.astro';
import ProductCategory from '../../../ProductCategory.astro';
import Products from '../../../Products.astro';
import Usage from '../../../Usage.astro';
import UsageItem from '../../../UsageItem.astro';
import UseCase from '../../../UseCase.astro';
import UseCaseInteractive from '../../../UseCaseInteractive.astro';
---

<UseCase
  title="Measuring success through usage, not elegance"
  description="System success was evaluated based on real adoption and impact."
>
  <UseCaseInteractive clsHeight={350} label="Component adoption metrics">
    <div class="w-full max-w-12000 grid gap-400">
      <mds-table>
        <mds-table-header>
          <mds-table-header-cell label="Component" sortable></mds-table-header-cell>
          <mds-table-header-cell label="Teams adoption" sortable></mds-table-header-cell>
          <mds-table-header-cell label="Status"></mds-table-header-cell>
        </mds-table-header>
        <mds-table-body>
          <mds-table-row>
            <mds-table-cell class="align-middle">
              <mds-text typography="caption">mds-button</mds-text>
            </mds-table-cell>
            <mds-table-cell class="align-middle" value="95">
              <mds-benchmark-bar value="95" variant="success">24 out of 25</mds-benchmark-bar>
            </mds-table-cell>
            <mds-table-cell class="align-middle">
              <mds-badge variant="success" tone="ghost" size="sm">High impact</mds-badge>
            </mds-table-cell>
          </mds-table-row>
          <mds-table-row>
            <mds-table-cell class="align-middle">
              <mds-text typography="caption">mds-input-field</mds-text>
            </mds-table-cell>
            <mds-table-cell class="align-middle" value="88">
              <mds-benchmark-bar value="88" variant="success">22 out of 25</mds-benchmark-bar>
            </mds-table-cell>
            <mds-table-cell class="align-middle">
              <mds-badge variant="success" tone="ghost" size="sm">High impact</mds-badge>
            </mds-table-cell>
          </mds-table-row>
          <mds-table-row>
            <mds-table-cell class="align-middle">
              <mds-text typography="caption">mds-accordion</mds-text>
            </mds-table-cell>
            <mds-table-cell class="align-middle" value="72">
              <mds-benchmark-bar value="72" variant="warning">18 out of 25</mds-benchmark-bar>
            </mds-table-cell>
            <mds-table-cell class="align-middle">
              <mds-badge variant="info" tone="ghost" size="sm">Growing</mds-badge>
            </mds-table-cell>
          </mds-table-row>
          <mds-table-row>
            <mds-table-cell class="align-middle">
              <mds-text typography="caption">mds-bibliography</mds-text>
            </mds-table-cell>
            <mds-table-cell class="align-middle" value="4">
              <mds-benchmark-bar value="4" variant="error">1 out of 25</mds-benchmark-bar>
            </mds-table-cell>
            <mds-table-cell class="align-middle">
              <mds-badge variant="error" tone="ghost" size="sm">Low usage</mds-badge>
            </mds-table-cell>
          </mds-table-row>
        </mds-table-body>
      </mds-table>
      <mds-banner headline="Key insight" icon="mi/outline/lightbulb" variant="primary">
        <mds-text typography="caption">
          Simple, frequently-used components like <code>mds-button</code> drive more value than elegant
          but rarely-used components like <code>mds-bibliography</code>.
        </mds-text>
      </mds-banner>
    </div>
  </UseCaseInteractive>
  <Usage>
    <UsageItem variant="do">Observe how and where components are actually used.</UsageItem>
    <UsageItem variant="dont">
      Optimize for internal elegance without external validation.
    </UsageItem>
    <UsageItem variant="do">Use feedback to guide iteration and prioritization.</UsageItem>
    <UsageItem variant="dont">Ignore usage data and qualitative feedback.</UsageItem>
  </Usage>

  <Products>
    <ProductCategory title="Metrics">
      <Brand name="omlet" label="Omlet" />
      <Brand name="componly" label="Componly" />
      <Brand
        icon="mi/outline/analytics"
        label="Design system metrics"
        url="https://thedesignsystem.guide/design-system-metrics"
      />
    </ProductCategory>
  </Products>
</UseCase>
