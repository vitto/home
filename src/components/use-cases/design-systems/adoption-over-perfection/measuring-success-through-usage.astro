---
import Brand from '../../../Brand.astro';
import Markdown from '../../../../components/Markdown.astro';
import ProductCategory from '../../../ProductCategory.astro';
import Products from '../../../Products.astro';
import Separator from '../../../../components/Separator.astro';
import Usage from '../../../Usage.astro';
import UsageItem from '../../../UsageItem.astro';
import UseCase from '../../../UseCase.astro';
import UseCaseInteractive from '../../../UseCaseInteractive.astro';
---

<UseCase
  title="Measuring success through usage, not elegance"
  description="System success was evaluated based on real adoption and impact."
>
  <UseCaseInteractive clsHeight={100} label="example">
    <mds-list>
      <mds-list-item
        >Button/alert/form component gi√† pronta per casi reali prima di generalizzare tutta la
        libreria</mds-list-item
      >
      <mds-list-item
        >UI pattern per header/footer rilasciati per onboarding progetti concreti</mds-list-item
      >
      <mds-list-item
        >Componenti specifici per flussi ad alta frequenza (es. moduli login e ricerca)</mds-list-item
      >
    </mds-list>
  </UseCaseInteractive>
</UseCase>

<Usage>
  <UsageItem variant="do">Observe how and where components are actually used.</UsageItem>
  <UsageItem variant="dont">Optimize for internal elegance without external validation.</UsageItem>
  <UsageItem variant="do">Use feedback to guide iteration and prioritization.</UsageItem>
  <UsageItem variant="dont">Ignore usage data and qualitative feedback.</UsageItem>
</Usage>

<Products>
  <ProductCategory title="Metrics">
    <Brand
      icon="mi/outline/analytics"
      label="Design system metrics"
      url="https://thedesignsystem.guide/design-system-metrics"
    />
    <Brand name="npm" label="Usage analytics" url="https://npmtrends.com/tailwindcss" />
  </ProductCategory>
</Products>

<Separator />
