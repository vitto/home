---
import Brand from '../../../Brand.astro';
import ProductCategory from '../../../ProductCategory.astro';
import Products from '../../../Products.astro';
import TextCode from '../../../TextCode.astro';
import Usage from '../../../Usage.astro';
import UsageItem from '../../../UsageItem.astro';
import UseCase from '../../../UseCase.astro';
import UseCaseInteractive from '../../../UseCaseInteractive.astro';
---

<UseCase
  title="Design components with a single responsibility"
  description="Each component should solve one problem well."
>
  <UseCaseInteractive clsHeight={320} label="Single responsibility">
    <mds-table class="w-full">
      <mds-table-header>
        <mds-table-header-cell label="Component"></mds-table-header-cell>
        <mds-table-header-cell label="Responsibility"></mds-table-header-cell>
        <mds-table-header-cell label="Status"></mds-table-header-cell>
      </mds-table-header>
      <mds-table-body>
        <mds-table-row>
          <mds-table-cell>
            <TextCode text="mds-button" />
          </mds-table-cell>
          <mds-table-cell>
            <mds-text typography="caption">Handle button interactions and states</mds-text>
          </mds-table-cell>
          <mds-table-cell>
            <mds-badge variant="success" tone="weak" size="sm" class="whitespace-nowrap">
              ✓ Single
            </mds-badge>
          </mds-table-cell>
        </mds-table-row>
        <mds-table-row>
          <mds-table-cell>
            <TextCode text="mds-icon" />
          </mds-table-cell>
          <mds-table-cell>
            <mds-text typography="caption">Display icon graphics</mds-text>
          </mds-table-cell>
          <mds-table-cell>
            <mds-badge variant="success" tone="weak" size="sm" class="whitespace-nowrap">
              ✓ Single
            </mds-badge>
          </mds-table-cell>
        </mds-table-row>
        <mds-table-row>
          <mds-table-cell>
            <TextCode text="mds-text" />
          </mds-table-cell>
          <mds-table-cell>
            <mds-text typography="caption">Render typography with consistent styling</mds-text>
          </mds-table-cell>
          <mds-table-cell>
            <mds-badge variant="success" tone="weak" size="sm" class="whitespace-nowrap">
              ✓ Single
            </mds-badge>
          </mds-table-cell>
        </mds-table-row>
        <mds-table-row>
          <mds-table-cell>
            <TextCode text="mds-form-card" />
          </mds-table-cell>
          <mds-table-cell>
            <mds-text typography="caption">Layout + validation + styling + submission</mds-text>
          </mds-table-cell>
          <mds-table-cell>
            <mds-badge variant="error" tone="weak" size="sm" class="whitespace-nowrap">
              ✗ Multiple
            </mds-badge>
          </mds-table-cell>
        </mds-table-row>
      </mds-table-body>
    </mds-table>
  </UseCaseInteractive>

  <Usage>
    <UsageItem variant="do">Create components with a clear, narrow purpose.</UsageItem>
    <UsageItem variant="dont">Bundle multiple responsibilities into a single component.</UsageItem>
    <UsageItem variant="do">Expose variation through composition, not branching logic.</UsageItem>
    <UsageItem variant="dont">Add props to cover every possible layout scenario.</UsageItem>
  </Usage>

  <Products>
    <ProductCategory title="Component architecture">
      <Brand name="storybook" label="Storybook" />
    </ProductCategory>
    <ProductCategory title="Documentation">
      <Brand name="zeroheight" label="Zeroheight" />
      <Brand name="supernova" label="Supernova" />
    </ProductCategory>
  </Products>
</UseCase>
