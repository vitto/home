---
import Brand from '../../../Brand.astro';
import ProductCategory from '../../../ProductCategory.astro';
import Products from '../../../Products.astro';
import Usage from '../../../Usage.astro';
import UsageItem from '../../../UsageItem.astro';
import UseCase from '../../../UseCase.astro';
import UseCaseInteractive from '../../../UseCaseInteractive.astro';
---

<UseCase
  title="Separate global decisions from local ones"
  description="Not every decision should scale at the same level."
>
  <UseCaseInteractive clsHeight={320} label="Global vs local decisions">
    <mds-table class="w-full">
      <mds-table-header>
        <mds-table-header-cell label="Decision Type"></mds-table-header-cell>
        <mds-table-header-cell label="Scope"></mds-table-header-cell>
        <mds-table-header-cell label="Example"></mds-table-header-cell>
      </mds-table-header>
      <mds-table-body>
        <mds-table-row>
          <mds-table-cell>
            <mds-text typography="caption"><strong>Global</strong></mds-text>
          </mds-table-cell>
          <mds-table-cell>
            <mds-badge variant="error" tone="weak" size="sm" class="whitespace-nowrap">
              System-wide
            </mds-badge>
          </mds-table-cell>
          <mds-table-cell>
            <mds-text typography="caption">Color tokens, spacing scale, typography</mds-text>
          </mds-table-cell>
        </mds-table-row>
        <mds-table-row>
          <mds-table-cell>
            <mds-text typography="caption"><strong>Global</strong></mds-text>
          </mds-table-cell>
          <mds-table-cell>
            <mds-badge variant="error" tone="weak" size="sm" class="whitespace-nowrap">
              System-wide
            </mds-badge>
          </mds-table-cell>
          <mds-table-cell>
            <mds-text typography="caption">Component APIs, accessibility standards</mds-text>
          </mds-table-cell>
        </mds-table-row>
        <mds-table-row>
          <mds-table-cell>
            <mds-text typography="caption"><strong>Local</strong></mds-text>
          </mds-table-cell>
          <mds-table-cell>
            <mds-badge variant="info" tone="weak" size="sm" class="whitespace-nowrap">
              Team/Product
            </mds-badge>
          </mds-table-cell>
          <mds-table-cell>
            <mds-text typography="caption">Layout composition, page-specific patterns</mds-text>
          </mds-table-cell>
        </mds-table-row>
        <mds-table-row>
          <mds-table-cell>
            <mds-text typography="caption"><strong>Local</strong></mds-text>
          </mds-table-cell>
          <mds-table-cell>
            <mds-badge variant="info" tone="weak" size="sm" class="whitespace-nowrap">
              Team/Product
            </mds-badge>
          </mds-table-cell>
          <mds-table-cell>
            <mds-text typography="caption">Content structure, workflow-specific UI</mds-text>
          </mds-table-cell>
        </mds-table-row>
      </mds-table-body>
    </mds-table>
  </UseCaseInteractive>
</UseCase>

<Usage>
  <UsageItem variant="do">Centralize rules that must remain consistent across products.</UsageItem>
  <UsageItem variant="dont">Force global decisions into local contexts.</UsageItem>
  <UsageItem variant="do">Allow teams to adapt patterns within defined constraints.</UsageItem>
  <UsageItem variant="dont">Lock every design choice at the system level.</UsageItem>
</Usage>

<Products>
  <ProductCategory title="Documentation platforms">
    <Brand name="zeroheight" label="Zeroheight" />
    <Brand name="supernova" label="Supernova" />
  </ProductCategory>
  <ProductCategory title="Version control">
    <Brand name="github" label="GitHub" />
  </ProductCategory>
</Products>
