---
import UseCase from '../../../UseCase.astro';
import UseCaseInteractive from '../../../UseCaseInteractive.astro';
import Usage from '../../../Usage.astro';
import UsageItem from '../../../UsageItem.astro';
import Brand from '../../../Brand.astro';
import ProductCategory from '../../../ProductCategory.astro';
import Products from '../../../Products.astro';
import Separator from '../../../../components/Separator.astro';
---

<UseCase
  title="Consistent constraints across flexible compositions"
  description="Composable components were allowed to combine freely, but within shared constraints."
>
  <UseCaseInteractive clsHeight={400} label="Flexible compositions">
    <div class="w-full max-w-12000 grid gap-600">
      <div class="grid gap-400">
        <mds-text typography="h6">Same components, different layouts</mds-text>
        <div class="grid gap-400">
          <div class="grid gap-200 p-400 bg-tone-neutral-09 rounded-md">
            <mds-text typography="caption" class="font-semibold">Layout A: Horizontal</mds-text>
            <div class="flex items-center gap-200">
              <mds-input-field label="Email">
                <mds-input type="email" placeholder="user@example.com"></mds-input>
              </mds-input-field>
              <mds-button variant="primary" tone="strong">Subscribe</mds-button>
            </div>
          </div>
          <div class="grid gap-200 p-400 bg-tone-neutral-09 rounded-md">
            <mds-text typography="caption" class="font-semibold">Layout B: Vertical</mds-text>
            <div class="grid gap-200">
              <mds-input-field label="Email">
                <mds-input type="email" placeholder="user@example.com"></mds-input>
              </mds-input-field>
              <mds-button variant="primary" tone="strong">Subscribe</mds-button>
            </div>
          </div>
        </div>
      </div>
      <mds-banner headline="Key insight" icon="mi/outline/info" variant="primary">
        <mds-text typography="caption">
          Both layouts use the same components with consistent spacing (gap-200), alignment rules,
          and accessibility constraints, but allow different compositions based on context.
        </mds-text>
      </mds-banner>
    </div>
  </UseCaseInteractive>
</UseCase>

<Usage>
  <UsageItem variant="do">
    Enforce consistent spacing, alignment rules, and accessibility constraints.
  </UsageItem>
  <UsageItem variant="dont">Let composability turn into arbitrary assembly.</UsageItem>
  <UsageItem variant="do">
    Allow different compositions as long as constraints are respected.
  </UsageItem>
  <UsageItem variant="dont">Break system rules to achieve local visual balance.</UsageItem>
</Usage>

<Products>
  <ProductCategory title="Design tokens">
    <Brand name="amazon" label="Style Dictionary" url="https://styledictionary.com/" />
  </ProductCategory>
  <ProductCategory title="Component libraries">
    <Brand name="storybook" label="Storybook" />
  </ProductCategory>
</Products>

<Separator />
