---
import UseCase from '../../../UseCase.astro';
import UseCaseInteractive from '../../../UseCaseInteractive.astro';
import Usage from '../../../Usage.astro';
import UsageItem from '../../../UsageItem.astro';
import Brand from '../../../Brand.astro';
import ProductCategory from '../../../ProductCategory.astro';
import Products from '../../../Products.astro';
---

<UseCase
  title="Balance control and autonomy"
  description="Strong governance creates alignment without centralizing every decision."
>
  <UseCaseInteractive clsHeight={350} label="Governance boundaries">
    <div class="w-full max-w-12000 grid gap-1200">
      <div class="grid gap-400">
        <mds-text typography="h6" tag="div">Centralized Decisions</mds-text>
        <mds-list>
          <mds-list-item icon="mi/outline/palette"
            >Design tokens (colors, spacing, typography)</mds-list-item
          >
          <mds-list-item icon="mi/outline/code">Core component APIs and props</mds-list-item>
          <mds-list-item icon="mi/outline/accessibility">Accessibility standards</mds-list-item>
          <mds-list-item icon="mi/outline/warning-amber">Breaking changes</mds-list-item>
        </mds-list>
      </div>
      <div class="grid gap-400">
        <mds-text typography="h6" tag="div">Team Autonomy</mds-text>
        <mds-list>
          <mds-list-item icon="mi/outline/auto-awesome-mosaic"
            >Component composition and layout</mds-list-item
          >
          <mds-list-item icon="mi/outline/brush">Local styling within design tokens</mds-list-item>
          <mds-list-item icon="mi/outline/extension">Product-specific extensions</mds-list-item>
          <mds-list-item icon="mi/outline/border-color">Contextual adaptations</mds-list-item>
        </mds-list>
      </div>
      <mds-banner headline="Guideline" icon="mi/outline/info" variant="primary">
        <mds-text typography="caption">
          Teams can extend components within defined boundaries. Propose new patterns when they
          become reusable across teams.
        </mds-text>
      </mds-banner>
    </div>
  </UseCaseInteractive>
</UseCase>

<Usage>
  <UsageItem variant="do">Centralize decisions that affect system-wide consistency.</UsageItem>
  <UsageItem variant="dont">Micro-manage local or contextual adaptations.</UsageItem>
  <UsageItem variant="do">Allow teams to extend the system within defined boundaries.</UsageItem>
  <UsageItem variant="dont">Force one-size-fits-all solutions.</UsageItem>
</Usage>

<Products>
  <ProductCategory title="Documentation">
    <Brand name="zeroheight" label="Zeroheight" />
    <Brand name="docusaurus" label="Docusaurus" />
  </ProductCategory>
  <ProductCategory title="Design tokens">
    <Brand name="amazon" label="Style Dictionary" url="https://styledictionary.com/" />
    <Brand icon="mi/baseline/palette" label="Palette generation" url="https://colors.eva.design/" />
  </ProductCategory>
</Products>
