---
import UseCase from '../../../UseCase.astro';
import UseCaseInteractive from '../../../UseCaseInteractive.astro';
import Usage from '../../../Usage.astro';
import UsageItem from '../../../UsageItem.astro';
import Brand from '../../../Brand.astro';
import ProductCategory from '../../../ProductCategory.astro';
import Products from '../../../Products.astro';
---

<UseCase
  title="Establish decision-making processes"
  description="Governance is about enabling decisions, not blocking them."
>
  <UseCaseInteractive clsHeight={400} label="Decision workflow">
    <div class="w-full max-w-12000 grid gap-600">
      <div class="grid gap-400 grid-cols-1 tablet:grid-cols-2">
        <div class="grid gap-200">
          <mds-text typography="h6">Proposal Process</mds-text>
          <div class="flex items-center gap-200">
            <div
              class="bg-label-orchid-09 text-label-orchid-03 size-600 rounded-full flex items-center justify-center text-info-label"
            >
              1
            </div>
            <mds-text typography="caption">Create issue with proposal template</mds-text>
          </div>
          <div class="flex items-center gap-200">
            <div
              class="bg-label-orange-09 text-label-orange-03 size-600 rounded-full flex items-center justify-center text-info-label"
            >
              2
            </div>
            <mds-text typography="caption">Gather feedback from stakeholders</mds-text>
          </div>
          <div class="flex items-center gap-200">
            <div
              class="bg-status-warning-09 text-status-warning-03 size-600 rounded-full flex items-center justify-center text-info-label"
            >
              3
            </div>
            <mds-text typography="caption">Design review (if design change)</mds-text>
          </div>
          <div class="flex items-center gap-200">
            <div
              class="bg-status-success-09 text-status-success-03 size-600 rounded-full flex items-center justify-center text-info-label"
            >
              4
            </div>
            <mds-text typography="caption">Technical review (if code change)</mds-text>
          </div>
          <div class="flex items-center gap-200">
            <div
              class="bg-status-info-09 text-status-info-03 size-600 rounded-full flex items-center justify-center text-info-label"
            >
              5
            </div>
            <mds-text typography="caption">Approval from component owner</mds-text>
          </div>
        </div>
        <div class="grid gap-400">
          <mds-text typography="h6">Acceptance Criteria</mds-text>
          <div class="grid gap-200">
            <div class="flex items-center gap-200">
              <div
                class="bg-status-success-09 dark:bg-status-success-07 text-status-success-03 size-600 rounded-full flex items-center justify-center text-info-label"
              >
                <mds-icon name="mi/baseline/done" class="size-300 dark:size-400"></mds-icon>
              </div>
              <mds-text typography="caption">Aligns with design principles</mds-text>
            </div>
            <div class="flex items-center gap-200">
              <div
                class="bg-status-success-09 dark:bg-status-success-07 text-status-success-03 size-600 rounded-full flex items-center justify-center text-info-label"
              >
                <mds-icon name="mi/baseline/done" class="size-300 dark:size-400"></mds-icon>
              </div>
              <mds-text typography="caption">Accessible (WCAG 2.1 AA minimum)</mds-text>
            </div>
            <div class="flex items-center gap-200">
              <div
                class="bg-status-success-09 dark:bg-status-success-07 text-status-success-03 size-600 rounded-full flex items-center justify-center text-info-label"
              >
                <mds-icon name="mi/baseline/done" class="size-300 dark:size-400"></mds-icon>
              </div>
              <mds-text typography="caption">Documented with examples</mds-text>
            </div>
            <div class="flex items-center gap-200">
              <div
                class="bg-status-success-09 dark:bg-status-success-07 text-status-success-03 size-600 rounded-full flex items-center justify-center text-info-label"
              >
                <mds-icon name="mi/baseline/done" class="size-300 dark:size-400"></mds-icon>
              </div>
              <mds-text typography="caption">Tested across browsers</mds-text>
            </div>
            <div class="flex items-center gap-200">
              <div
                class="bg-status-success-09 dark:bg-status-success-07 text-status-success-03 size-600 rounded-full flex items-center justify-center text-info-label"
              >
                <mds-icon name="mi/baseline/done" class="size-300 dark:size-400"></mds-icon>
              </div>
              <mds-text typography="caption"
                >Backward compatible or migration path provided</mds-text
              >
            </div>
          </div>
        </div>
      </div>
    </div>
  </UseCaseInteractive>

  <Usage>
    <UsageItem variant="do">Define how changes are proposed, reviewed, and approved.</UsageItem>
    <UsageItem variant="dont">Handle decisions ad hoc or in private channels.</UsageItem>
    <UsageItem variant="do">Document acceptance criteria and design principles.</UsageItem>
    <UsageItem variant="dont">Approve changes without shared evaluation standards.</UsageItem>
  </Usage>

  <Products>
    <ProductCategory title="Issue tracking">
      <Brand name="github" label="GitHub" />
      <Brand name="jira" label="Jira" />
      <Brand name="linear" label="Linear" />
    </ProductCategory>
    <ProductCategory title="Communication tools">
      <Brand name="slack" label="Slack" />
    </ProductCategory>
  </Products>
</UseCase>
