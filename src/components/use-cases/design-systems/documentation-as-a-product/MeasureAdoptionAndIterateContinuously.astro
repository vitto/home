---
import Brand from '../../../Brand.astro';
import ProductCategory from '../../../ProductCategory.astro';
import Products from '../../../Products.astro';
import Usage from '../../../Usage.astro';
import UsageItem from '../../../UsageItem.astro';
import UseCase from '../../../UseCase.astro';
import UseCaseInteractive from '../../../UseCaseInteractive.astro';
---

<UseCase
  title="Measure adoption and iterate continuously"
  description='Documentation is never "done", It should evolve based on real usage signals.'
>
  <UseCaseInteractive clsHeight={320} label="Documentation metrics">
    <div class="w-full grid gap-600">
      <mds-table class="w-full">
        <mds-table-header>
          <mds-table-header-cell label="Metric"></mds-table-header-cell>
          <mds-table-header-cell label="Value"></mds-table-header-cell>
          <mds-table-header-cell label="Insight"></mds-table-header-cell>
        </mds-table-header>
        <mds-table-body>
          <mds-table-row>
            <mds-table-cell>
              <mds-text typography="caption"><strong>Top search term</strong></mds-text>
            </mds-table-cell>
            <mds-table-cell>
              <code class="whitespace-nowrap text-sm">"button variants"</code>
            </mds-table-cell>
            <mds-table-cell>
              <mds-text typography="caption">1,234 searches/month</mds-text>
            </mds-table-cell>
          </mds-table-row>
          <mds-table-row>
            <mds-table-cell>
              <mds-text typography="caption"><strong>Most viewed page</strong></mds-text>
            </mds-table-cell>
            <mds-table-cell>
              <code class="whitespace-nowrap text-sm">/components/button</code>
            </mds-table-cell>
            <mds-table-cell>
              <mds-text typography="caption">8,456 views/month</mds-text>
            </mds-table-cell>
          </mds-table-row>
          <mds-table-row>
            <mds-table-cell>
              <mds-text typography="caption"><strong>Common navigation path</strong></mds-text>
            </mds-table-cell>
            <mds-table-cell>
              <mds-text typography="caption">Home → Components → Button</mds-text>
            </mds-table-cell>
            <mds-table-cell>
              <mds-text typography="caption">65% of users</mds-text>
            </mds-table-cell>
          </mds-table-row>
          <mds-table-row>
            <mds-table-cell>
              <mds-text typography="caption"><strong>Support questions</strong></mds-text>
            </mds-table-cell>
            <mds-table-cell>
              <mds-text typography="caption">"How to disable button?"</mds-text>
            </mds-table-cell>
            <mds-table-cell>
              <mds-badge variant="warning" tone="weak" size="sm" class="whitespace-nowrap">
                Documentation gap
              </mds-badge>
            </mds-table-cell>
          </mds-table-row>
        </mds-table-body>
      </mds-table>
    </div>
  </UseCaseInteractive>

  <Usage>
    <UsageItem variant="do">Track search terms, page views, and navigation paths.</UsageItem>
    <UsageItem variant="dont">Assume usefulness without evidence.</UsageItem>
    <UsageItem variant="do">Use support questions to identify documentation gaps.</UsageItem>
    <UsageItem variant="dont">Only update docs during major redesigns.</UsageItem>
  </Usage>

  <Products>
    <ProductCategory title="Analytics">
      <Brand name="google-analytics" label="Google Analytics" />
      <Brand name="amplitude" label="Amplitude" />
      <Brand name="hotjar" label="Hotjar" />
    </ProductCategory>
    <ProductCategory title="Feedback tools">
      <Brand name="typeform" label="Typeform" />
      <Brand name="google-forms" label="Google Forms" />
    </ProductCategory>
  </Products>
</UseCase>
