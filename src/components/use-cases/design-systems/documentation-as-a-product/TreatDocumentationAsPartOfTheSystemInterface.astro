---
import Brand from '../../../Brand.astro';
import ProductCategory from '../../../ProductCategory.astro';
import Products from '../../../Products.astro';
import Usage from '../../../Usage.astro';
import UsageItem from '../../../UsageItem.astro';
import UseCase from '../../../UseCase.astro';
import UseCaseInteractive from '../../../UseCaseInteractive.astro';
---

<UseCase
  title="Treat documentation as part of the system interface"
  description="Documentation defines how the system is understood and used. It is part of the public API."
>
  <UseCaseInteractive clsHeight={320} label="Terminology alignment">
    <mds-table class="w-full">
      <mds-table-header>
        <mds-table-header-cell label="Concept"></mds-table-header-cell>
        <mds-table-header-cell label="UI Label"></mds-table-header-cell>
        <mds-table-header-cell label="Code API"></mds-table-header-cell>
        <mds-table-header-cell label="Documentation"></mds-table-header-cell>
      </mds-table-header>
      <mds-table-body>
        <mds-table-row>
          <mds-table-cell>
            <mds-text typography="caption"><strong>Button variant</strong></mds-text>
          </mds-table-cell>
          <mds-table-cell>
            <code class="whitespace-nowrap text-sm">Primary</code>
          </mds-table-cell>
          <mds-table-cell>
            <code class="whitespace-nowrap text-sm">variant="primary"</code>
          </mds-table-cell>
          <mds-table-cell>
            <code class="whitespace-nowrap text-sm">Primary variant</code>
          </mds-table-cell>
        </mds-table-row>
        <mds-table-row>
          <mds-table-cell>
            <mds-text typography="caption"><strong>Button tone</strong></mds-text>
          </mds-table-cell>
          <mds-table-cell>
            <code class="whitespace-nowrap text-sm">Strong</code>
          </mds-table-cell>
          <mds-table-cell>
            <code class="whitespace-nowrap text-sm">tone="strong"</code>
          </mds-table-cell>
          <mds-table-cell>
            <code class="whitespace-nowrap text-sm">Strong tone</code>
          </mds-table-cell>
        </mds-table-row>
        <mds-table-row>
          <mds-table-cell>
            <mds-text typography="caption"><strong>Size scale</strong></mds-text>
          </mds-table-cell>
          <mds-table-cell>
            <code class="whitespace-nowrap text-sm">Medium</code>
          </mds-table-cell>
          <mds-table-cell>
            <code class="whitespace-nowrap text-sm">size="md"</code>
          </mds-table-cell>
          <mds-table-cell>
            <code class="whitespace-nowrap text-sm">Medium size</code>
          </mds-table-cell>
        </mds-table-row>
        <mds-table-row>
          <mds-table-cell>
            <mds-text typography="caption"><strong>State</strong></mds-text>
          </mds-table-cell>
          <mds-table-cell>
            <code class="whitespace-nowrap text-sm">Disabled</code>
          </mds-table-cell>
          <mds-table-cell>
            <code class="whitespace-nowrap text-sm">disabled</code>
          </mds-table-cell>
          <mds-table-cell>
            <code class="whitespace-nowrap text-sm">Disabled state</code>
          </mds-table-cell>
        </mds-table-row>
      </mds-table-body>
    </mds-table>
  </UseCaseInteractive>
</UseCase>

<Usage>
  <UsageItem variant="do">Version documentation alongside components and tokens.</UsageItem>
  <UsageItem variant="dont">Let documentation lag behind shipped behavior.</UsageItem>
  <UsageItem variant="do">Align terminology between UI, code, and docs.</UsageItem>
  <UsageItem variant="dont">Use inconsistent naming across surfaces.</UsageItem>
</Usage>

<Products>
  <ProductCategory title="Version control">
    <Brand name="github" label="GitHub" />
  </ProductCategory>
  <ProductCategory title="Documentation generators">
    <Brand name="docusaurus" label="Docusaurus" />
  </ProductCategory>
  <ProductCategory title="Interactive documentation">
    <Brand name="storybook" label="Storybook" />
  </ProductCategory>
</Products>
