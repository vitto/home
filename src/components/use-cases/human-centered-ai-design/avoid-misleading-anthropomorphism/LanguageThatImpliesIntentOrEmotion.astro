---
import AIBalloon from '../../AIBalloon.astro';
import AIBalloonMessage from '../../AIBalloonMessage.astro';
import AIResponseMessage from '../../AIResponseMessage.astro';
import HighlightBox from '../../HighlightBox.astro';
import Markdown from '../../../Markdown.astro';
import Usage from '../../../Usage.astro';
import UsageItem from '../../../UsageItem.astro';
import UseCase from '../../../UseCase.astro';
import UseCaseInteractive from '../../../UseCaseInteractive.astro';
---

<UseCase
  title="Language That Implies Intent or Emotion"
  description="Avoid language that suggests the AI has intentions, feelings, preferences, or personal experiences."
>
  <UseCaseInteractive clsHeight={208} label="Language comparison" toggle>
    <div class="grid gap-600 w-full max-w-9600">
      <AIBalloon>
        <AIBalloonMessage>
          I'm looking for a mid-range active noise cancelling headset, please give me a list of some
          available products.
        </AIBalloonMessage>
      </AIBalloon>
      <AIResponseMessage>
        <HighlightBox label="Neutral language" class="grid gap-600" variant="success">
          <Markdown
            typography="detail"
            content={`
Based on your preferences, this product matches your criteria. The system found 3 similar items.
        `}
          />
        </HighlightBox>
      </AIResponseMessage>
    </div>
    <div class="grid gap-600 w-full max-w-9600">
      <AIBalloon>
        <AIBalloonMessage>
          I'm looking for a mid-range active noise cancelling headset, please give me a list of some
          available products.
        </AIBalloonMessage>
      </AIBalloon>
      <AIResponseMessage>
        <HighlightBox label="Anthropomorphic language" class="grid gap-600" variant="error">
          <Markdown
            typography="detail"
            content={`
I think you'll love this! I found it especially for you because I know you like quality products. I'm excited to show you these options!
        `}
          />
        </HighlightBox>
      </AIResponseMessage>
    </div>
  </UseCaseInteractive>
  <Usage>
    <UsageItem variant="do">
      Use factual language that describes system behavior and outputs.
    </UsageItem>
    <UsageItem variant="dont">
      Use language that suggests the AI has thoughts, feelings, or personal experiences.
    </UsageItem>
    <UsageItem variant="do">
      Describe what the system did or found, not what it "wants" or "feels".
    </UsageItem>
    <UsageItem variant="dont">
      Use phrases like "I think", "I feel", "I understand", or "I'm sorry" as if the AI has
      emotions.
    </UsageItem>
  </Usage>
</UseCase>
