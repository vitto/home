---
import UseCase from '../../../UseCase.astro';
import UseCaseInteractive from '../../../UseCaseInteractive.astro';
import Usage from '../../../Usage.astro';
import UsageItem from '../../../UsageItem.astro';
import DashboardCard from '../../DashboardCard.astro';

const dashboardData = {
  modelVersion: '4.2',
  lastReviewed: '15 days ago',
  userSatisfaction: '92%',
  flaggedResponses: 5,
  flaggedStatus: 'under review',
  systemStatus: 'Stable',
};
---

<UseCase
  title="Maintain Long-Term Governance, Not One-Time Trust"
  description="Treat trust as something sustained through ongoing oversight, updates, and responsiveness—not a one-time promise. Design for continuous monitoring, improvement, and communication about how the system is governed."
>
  <UseCaseInteractive clsHeight={112} label="A basic example of long-term governance">
    <div class="grid gap-400 w-full rounded-2xl bg-tone-neutral-09 p-600">
      <div class="flex items-center gap-200">
        <mds-emoji class="size-1600"></mds-emoji>
        <div class="grid gap-0">
          <mds-text typography="h6">AI App</mds-text>
          <mds-text typography="caption" class="text-tone-neutral-05">
            Dashboard, change logs, and governance pages.
          </mds-text>
        </div>
      </div>
      <div class="grid grid-cols-fit-md gap-400">
        <DashboardCard label="Model Version">
          <div class="flex flex-wrap justify-between items-center gap-200">
            <mds-text typography="h6">4.2</mds-text>
            <mds-button size="sm" tone="weak">Update 4.2.3 available</mds-button>
          </div>
        </DashboardCard>
        <DashboardCard label="Last Reviewed" value="15 days ago" />
        <DashboardCard label="Product Satisfaction">
          <mds-benchmark-bar value={93} variant="success">Users are satisfied</mds-benchmark-bar>
        </DashboardCard>
        <DashboardCard label="Flagged Responses">
          <mds-benchmark-bar value={(5 / 7) * 100} alias="5 of 7" variant="warning"
            >Under review</mds-benchmark-bar
          >
        </DashboardCard>
        <DashboardCard label="System Status">
          <div class="flex items-center gap-200">
            <mds-icon name="mi/baseline/check-circle" class="fill-status-success-06"></mds-icon>
            <mds-text typography="caption" class="text-tone-neutral-05">Stable</mds-text>
          </div>
        </DashboardCard>
        <DashboardCard label="Service Availability">
          <mds-benchmark-bar value={99} variant="info">Uptime</mds-benchmark-bar>
        </DashboardCard>
      </div>
    </div>
  </UseCaseInteractive>
  <Usage>
    <UsageItem variant="do">
      Provide ongoing visibility into how the AI is monitored, updated, and governed—e.g. reports,
      change logs, or governance pages.
    </UsageItem>
    <UsageItem variant="dont">
      Treat trust as established once at launch with no further communication about oversight or
      improvement.
    </UsageItem>
    <UsageItem variant="do">
      When models or policies change in ways that affect users, communicate what changed and where
      to learn more.
    </UsageItem>
    <UsageItem variant="dont">
      Deploy updates or policy changes silently when they can affect user expectations or outcomes.
    </UsageItem>
  </Usage>
</UseCase>
