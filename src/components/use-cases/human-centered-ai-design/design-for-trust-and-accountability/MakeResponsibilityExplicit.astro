---
import UseCase from '../../../UseCase.astro';
import UseCaseInteractive from '../../../UseCaseInteractive.astro';
import Usage from '../../../Usage.astro';
import UsageItem from '../../../UsageItem.astro';
import Markdown from '../../../Markdown.astro';
import AIBalloon from '../../AIBalloon.astro';
import AIBalloonMessage from '../../AIBalloonMessage.astro';
import AILink from '../../AILink.astro';
import AILinks from '../../AILinks.astro';
import AIResponseMessage from '../../AIResponseMessage.astro';
import HighlightBox from '../../HighlightBox.astro';
import headphonesData from '../../../../data/use-cases/headphones.json';
import AIInput from '../../AIInput.astro';
import AIInputWrapper from '../../AIInputWrapper.astro';
import ModalWindow from '../../ModalWindow.astro';
---

<UseCase
  title="Make Responsibility Explicit"
  description="Clearly state who is accountable for the AI's behavior and outcomes—the provider, the deployer, or the user—so users know whom to hold responsible and where to turn for support."
>
  <UseCaseInteractive clsHeight={112} label="Make responsibility explicit" toggle>
    <div class="grid gap-600 w-full max-w-9600 py-800">
      <AIBalloon>
        <AIBalloonMessage>Write an email to cancel an electricity supply contract</AIBalloonMessage>
      </AIBalloon>
      <AIResponseMessage>
        <Markdown
          typography="detail"
          content={`
Subject: Request to withdraw from the electricity supply contract (No. [XXX])

Dear [Supplier Name],
I hereby communicate my intention to withdraw from the electricity supply contract signed on [XX/XX/XXXX], pursuant to Article [Y] of the Consumer Code.
Termination of the contract is requested effective from [date].
Kind regards,

[Name and user data]
      `}
        />
      </AIResponseMessage>
      <AIInputWrapper>
        <AIInput />
        <HighlightBox label="Responsibility Explicit" class="relative grid gap-600">
          <Markdown
            typography="caption"
            content={`
This service may make errors, always check the generated output. <a href="#" data-ai-links>More information and settings.</a>
      `}
          />
        </HighlightBox>
        <mds-modal data-modal-responsibility position="bottom-right">
          <ModalWindow>
            <div class="grid gap-100 px-100">
              <mds-text typography="h6">Documentation</mds-text>
              <mds-button
                icon="mi/outline/description"
                variant="dark"
                tone="quiet"
                class="justify-start justify-self-start -mx-400">Documentation</mds-button
              >
              <mds-button
                icon="mi/outline/smart-toy"
                variant="dark"
                tone="quiet"
                class="justify-start justify-self-start -mx-400">Models</mds-button
              >
              <mds-button
                icon="mi/outline/auto-stories"
                variant="dark"
                tone="quiet"
                class="justify-start justify-self-start -mx-400">Guides</mds-button
              >
            </div>
            <div class="grid gap-100 px-100">
              <mds-text typography="h6">Contact</mds-text>
              <mds-button
                icon="mi/outline/groups"
                variant="dark"
                tone="quiet"
                class="justify-start justify-self-start -mx-400">Community support</mds-button
              >
              <mds-button
                icon="mi/outline/help-center"
                variant="dark"
                tone="quiet"
                class="justify-start justify-self-start -mx-400">Help center</mds-button
              >
            </div>
            <div class="grid gap-100 px-100">
              <mds-text typography="h6">Terms & privacy</mds-text>
              <mds-button
                icon="mi/outline/gavel"
                variant="dark"
                tone="quiet"
                class="justify-start justify-self-start -mx-400">Terms of service</mds-button
              >
              <mds-button
                icon="mi/outline/policy"
                variant="dark"
                tone="quiet"
                class="justify-start justify-self-start -mx-400">Privacy policy</mds-button
              >
            </div>
          </ModalWindow>
        </mds-modal>
      </AIInputWrapper>
    </div>
    <div class="grid gap-600 w-full max-w-9600 py-800">
      <AIBalloon>
        <AIBalloonMessage>Write an email to cancel an electricity supply contract</AIBalloonMessage>
      </AIBalloon>
      <AIResponseMessage>
        <Markdown
          typography="detail"
          content={`
Subject: Request to withdraw from the electricity supply contract (No. [XXX])

Dear [Supplier Name],
I hereby communicate my intention to withdraw from the electricity supply contract signed on [XX/XX/XXXX], pursuant to Article [Y] of the Consumer Code.
Termination of the contract is requested effective from [date].
Kind regards,

[Name and user data]
      `}
        />
      </AIResponseMessage>
      <AIInputWrapper>
        <AIInput />
      </AIInputWrapper>
    </div>
  </UseCaseInteractive>
  <script>
    document.querySelectorAll('[data-ai-links]').forEach((trigger) => {
      trigger.addEventListener('click', (e) => {
        e.preventDefault();
        const modal = document.querySelector('[data-modal-responsibility]');
        if (modal) modal.setAttribute('opened', '');
      });
    });
  </script>
  <Usage>
    <UsageItem variant="do">
      State who provides the AI, who is accountable for outcomes, and how to get support or
      escalate.
    </UsageItem>
    <UsageItem variant="dont">
      Present AI output without indicating provider, accountability, or path to support.
    </UsageItem>
    <UsageItem variant="do">
      Clarify that the user (or designated role) is responsible for the final decision when the AI
      suggests one.
    </UsageItem>
    <UsageItem variant="dont">
      Imply that the AI or the system alone is responsible for decisions that have human
      consequences.
    </UsageItem>
  </Usage>
</UseCase>
