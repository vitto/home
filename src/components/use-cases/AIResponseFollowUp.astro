---
/**
 * AIResponseFollowUp Component
 *
 * Container for follow-up actions that appear after an AI response message.
 *
 * Props:
 * @param {string} class - Additional CSS classes
 */
interface Props {
  class?: string;
}

const { class: className = '' } = Astro.props;
---

<div class={`flex flex-wrap gap-200 ${className}`} data-ai-response-follow-up>
  <slot />
</div>
