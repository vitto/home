---
import Button from './Button.astro';
import Icon from './Icon.astro';

interface Props {
  items?: Array<{
    href: string;
    label: string;
    icon: string;
  }>;
}

const baseUrl = import.meta.env.BASE_URL;

const defaultItems = [
  {
    href: baseUrl,
    label: 'Home',
    icon: 'mi/baseline/home',
  },
  {
    href: `${baseUrl}/user-centered-design`,
    label: 'User-Centered Design',
    icon: 'mi/baseline/person',
  },
  {
    href: `${baseUrl}/design-systems`,
    label: 'Design Systems',
    icon: 'mi/baseline/palette',
  },
  {
    href: `${baseUrl}/hax-principles`,
    label: 'HAX Principles',
    icon: 'mgg/ai-chatbot',
  },
];

const { items = defaultItems } = Astro.props;
---

<header class="grid">
  <nav
    class="flex flex-wrap items-center gap-400 justify-center tablet:justify-start border-2 border-red-500 border-solid"
  >
    {
      items.map((item) => (
        <Button href={item.href} variant="dark" class="whitespace-nowrap shrink-0">
          <Icon name={item.icon} />
          {item.label}
        </Button>
      ))
    }
  </nav>
</header>
