---
interface Props {
  title?: string;
  class?: string;
}

const { title = 'Tools & services', class: className = '' } = Astro.props;
---

<mds-accordion class="select-none -mb-400">
  <mds-accordion-item label={title}>
    <div class="grid grid-cols-full gap-200">
      <div class="flex items-center justify-between flex-wrap gap-100">
        <mds-text typography="detail"
          >A list of tools and services related to this argument.</mds-text
        >
        <mds-badge class="justify-self-start select-none" variant="warning" tone="weak"
          >potentially outdated</mds-badge
        >
      </div>
      <mds-table>
        <mds-table-header>
          <mds-table-header-cell label="What"></mds-table-header-cell>
          <mds-table-header-cell label="Tools, services or approach"></mds-table-header-cell>
        </mds-table-header>
        <mds-table-body>
          <slot />
        </mds-table-body>
      </mds-table>
    </div>
  </mds-accordion-item>
</mds-accordion>
