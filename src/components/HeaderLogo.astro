---
import Icon from './Icon.astro';

interface Props {
  class?: string;
}

const { class: className = '' } = Astro.props;

// Get base URL from Astro config and normalize it
// Remove trailing slash if present (except for root)
const rawBaseUrl = import.meta.env.BASE_URL;
const baseUrl = rawBaseUrl === '/' ? '' : rawBaseUrl.replace(/\/$/, '');
---

<a
  title="Back to Home"
  href={baseUrl || '/'}
  class={`inline-flex focus-bounce rounded-full shrink-0 hover:rotate-[120deg] focus-visible:rotate-[120deg] -translate-y-50 ease-out-quint transition-transform duration-500 no-underline ${className}`}
>
  <Icon name="vv/logo" class="text-[48px] justify-self-center" />
</a>
