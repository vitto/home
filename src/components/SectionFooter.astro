---
import Section from './Section.astro';
import Button from './Button.astro';

interface Props {
  href?: string;
  icon?: string;
  title?: string;
  class?: string;
}

const baseUrl = import.meta.env.BASE_URL;
const { href = baseUrl, icon = 'mi/outline/home', title = 'Back to Home', class: buttonClass = 'mr-500' } = Astro.props;
---

<Section>
  <Button href={href} variant="back" icon={icon} title={title} class={buttonClass} />
</Section>
