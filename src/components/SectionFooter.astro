---
import Section from './Section.astro';
import Button from './Button.astro';
import Icon from './Icon.astro';

interface Props {
  href?: string;
  icon?: string;
  title?: string;
}

// Get base URL from Astro config and normalize it
// Remove trailing slash if present (except for root)
const rawBaseUrl = import.meta.env.BASE_URL;
const baseUrl = rawBaseUrl === '/' ? '' : rawBaseUrl.replace(/\/$/, '');
const { href = baseUrl || '/', title = 'Back to Home' } = Astro.props;
---

<Section>
  <Button
    href={href}
    variant="light"
    class="shrink-0 py-300 align-self-center justify-self-center"
    title={title}
  >
    <Icon name="mi/outline/home" class="text-tone-neutral-04" />
  </Button>
</Section>
