---
/**
 * Principles Component
 *
 * Wrapper component for displaying principle cards in a grid layout
 *
 * Props:
 * @param {string} class - Additional CSS classes to add to the wrapper
 */
interface Props {
  class?: string;
}

const { class: className = '' } = Astro.props;

const baseClasses =
  'priciples-section w-full max-w-screen-desktop grid grid-cols-1 tablet:grid-cols-3 desktop:grid-cols-4 gap-600 desktop:gap-400 tablet:rounded-[48px]';
const combinedClasses = `${baseClasses} ${className}`.trim();
---

<section class="flex justify-center px-600 mobile:px-0">
  <div class={combinedClasses}>
    <slot />
  </div>
</section>
