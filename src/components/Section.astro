---
/**
 * Section Component
 *
 * Wrapper component for page sections with consistent layout
 *
 * Props:
 * @param {string} class - Additional CSS classes to add to the section element
 */
interface Props {
  class?: string;
  contentClass?: string;
}

const { class: className = '', contentClass = 'gap-600' } = Astro.props;

const baseClasses = 'min-h-screen py-2000 mobile:py-600 px-600';
const combinedClasses = `${baseClasses} ${className}`.trim();
---

<section class={combinedClasses}>
  <div class={`max-w-screen-tablet w-full mx-auto grid ${contentClass}`}>
    <slot />
  </div>
</section>
