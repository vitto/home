---
/**
 * Section Component
 *
 * Wrapper component for page sections with consistent layout
 *
 * Props:
 * @param {string} class - Additional CSS classes to add to the section element
 */
interface Props {
  class?: string;
}

const { class: className = '' } = Astro.props;

const baseClasses = 'min-h-screen py-2000 px-400';
const combinedClasses = `${baseClasses} ${className}`.trim();
---

<section class={combinedClasses}>
  <div class="max-w-6xl mx-auto">
    <slot />
  </div>
</section>

