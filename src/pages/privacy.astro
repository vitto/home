---
import Layout from '../layouts/Layout.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import Button from '../components/Button.astro';
import List from '../components/List.astro';
import ListItem from '../components/ListItem.astro';

const latestUpdate = new Date('2025-12-19').toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});

const privacySections = [
  {
    id: 'data-controller',
    title: 'Data Controller',
    description:
      'Personal website of <strong>Vittorio Vittori</strong>, Design System Architect and Senior UX Designer. <br /> Resident in Italy.',
    button: {
      href: 'https://linkedin.com/in/vittoriovittori',
      label: 'LinkedIn',
    },
  },
  {
    id: 'github-hosting',
    title: 'GitHub Pages Hosting',
    description:
      'This site is hosted on GitHub Pages. GitHub may collect access logs (including IP address) for security and reliability purposes.',
    button: {
      href: 'https://pages.github.com',
      label: 'GitHub Pages',
    },
  },
  {
    id: 'user-data',
    title: 'User-Submitted Data',
    description:
      'If you contact me, your data will only be used to respond to your inquiry. I do not share, sell, or use your contact information for any other purpose.',
    button: {
      href: 'https://linkedin.com/in/vittoriovittori',
      label: 'LinkedIn',
    },
  },
  {
    id: 'what-not-do',
    title: 'What this site does not do',
    list: [
      {
        icon: 'mi/baseline/bar-chart',
        text: 'No tracking scripts or analytics',
      },
      {
        icon: 'mi/outline/cookie',
        text: 'No cookies (except those required by GitHub Pages for security)',
      },
      {
        icon: 'mi/baseline/ads-click',
        text: 'No third-party advertising',
      },
      {
        icon: 'mi/outline/badge',
        text: 'No data collection beyond what GitHub Pages requires for hosting',
      },
    ],
  },
  {
    id: 'your-rights',
    title: 'Your Rights',
    description:
      'Under GDPR, you have the right to access, rectify, or delete any personal data I may have collected through direct contact.<br />To exercise these rights, please contact me using the email address provided above.',
    button: {
      href: 'https://linkedin.com/in/vittoriovittori',
      label: 'LinkedIn',
    },
  },
];
---

<Layout
  title="Privacy Policy - Vittorio Vittori"
  description="Privacy policy for Vittorio Vittori's portfolio website. This site respects your privacy by design."
>
  <Header />
  <main class="min-h-screen px-400 desktop:px-1200 py-2000">
    <div class="max-w-screen-desktop w-full mx-auto grid gap-2400">
      <div class="grid gap-200">
        <h1 class="text-title-h1">Privacy Policy</h1>
        <p class="text-info-detail">
          This site respects your privacy by design. No tracking. No ads. Just static HTML.
        </p>
        <p class="text-info-detail">
          {`Last updated: ${latestUpdate}`}
        </p>
      </div>

      <div class="grid gap-1600">
        {
          privacySections.map((section) => (
            <div class="grid gap-600">
              <div class="grid gap-200">
                <h4 class="text-title-h4" set:html={section.title} />
                {section.description && (
                  <p class="text-info-detail" set:html={section.description} />
                )}
                {section.list && (
                  <List class="mt-200">
                    {section.list.map((item) => (
                      <ListItem icon={item.icon}>
                        <p class="text-info-detail">{item.text}</p>
                      </ListItem>
                    ))}
                  </List>
                )}
              </div>
              {section.button && (
                <Button href={section.button.href} variant="outline" class="justify-self-start">
                  {section.button.label}
                </Button>
              )}
            </div>
          ))
        }
      </div>
      <div class="h-50 w-full bg-tone-neutral-08"></div>
    </div>
  </main>
  <Footer />
</Layout>
