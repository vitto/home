---
import Layout from '../layouts/Layout.astro';
import PrincipleCard from '../components/PrincipleCard.astro';
import CategoryFilter from '../components/CategoryFilter.astro';
import Principles from '../components/Principles.astro';
import Section from '../components/Section.astro';
import SectionHeader from '../components/SectionHeader.astro';
import data from '../data/user-centered-design.json';
import Footer from '../components/Footer.astro';
import Button from '../components/Button.astro';
import Header from '../components/Header.astro';
import Icon from '../components/Icon.astro';
import SectionFooter from '../components/SectionFooter.astro';

const baseUrl = import.meta.env.BASE_URL;

// Sort principles by title
const sortedPrinciples = [...data.principles].sort((a, b) => a.title.localeCompare(b.title));
---

<Layout title="User-Centered Design - Vittorio's Portfolio">
  <Section contentClass="gap-1200 mobile:gap-600">
    <Header />
    <SectionHeader title={data.title} description={data.description} />

    <CategoryFilter categories={data.categories} />
  </Section>
  <Principles>
    {
      sortedPrinciples.map((principle) => (
        <PrincipleCard
          id={principle.id}
          title={principle.title}
          description={principle.description}
          category={principle.category}
          icon={principle.icon}
          color={data.categoryColors[principle.category as keyof typeof data.categoryColors] || ''}
          href={`${baseUrl}/user-centered-design/${principle.id}`}
        />
      ))
    }
  </Principles>
  <SectionFooter />
  <Footer />
</Layout>
