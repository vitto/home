---
import UseCaseLayout from '../../layouts/UseCaseLayout.astro';
import data from '../../data/user-centered-design.json';
import CancelAndUndo from '../../components/use-cases/user-centered-design/user-control-and-freedom/CancelAndUndo.astro';
import ClearExitPaths from '../../components/use-cases/user-centered-design/user-control-and-freedom/ClearExitPaths.astro';
import NonLinearNavigation from '../../components/use-cases/user-centered-design/user-control-and-freedom/NonLinearNavigation.astro';
import ReversibleStateChanges from '../../components/use-cases/user-centered-design/user-control-and-freedom/ReversibleStateChanges.astro';
import RespectForUserIntent from '../../components/use-cases/user-centered-design/user-control-and-freedom/RespectForUserIntent.astro';
import ForgivingInteraction from '../../components/use-cases/user-centered-design/user-control-and-freedom/ForgivingInteraction.astro';
import PrincipleNav from '../../components/PrincipleNav.astro';

const principle = data.principles.find((p) => p.id === 'user-control-and-freedom')!;
const baseUrl = import.meta.env.BASE_URL;
const sectionPath = '/user-centered-design';
const sectionName = 'User-Centered Design';
---

<UseCaseLayout
  title={`${principle.title} / ${sectionName}`}
  principle={principle}
  categoryColors={data.categoryColors}
  sectionName={data.title}
  sectionPath={sectionPath}
>
  <CancelAndUndo />
  <ClearExitPaths />
  <ForgivingInteraction />
  <NonLinearNavigation />
  <RespectForUserIntent />
  <!-- <ReversibleStateChanges /> -->
  <PrincipleNav
    baseUrl={baseUrl}
    currentPrincipleId={principle.id}
    sectionPath={sectionPath}
    allPrinciples={data.principles}
  />
</UseCaseLayout>
