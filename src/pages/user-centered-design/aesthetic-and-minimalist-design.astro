---
import UseCaseLayout from '../../layouts/UseCaseLayout.astro';
import data from '../../data/user-centered-design.json';
import EssentialContent from '../../components/use-cases/user-centered-design/aesthetic-and-minimalist-design/EssentialContent.astro';
import VisualHierarchy from '../../components/use-cases/user-centered-design/aesthetic-and-minimalist-design/VisualHierarchy.astro';
import Consistency from '../../components/use-cases/user-centered-design/aesthetic-and-minimalist-design/Consistency.astro';
import CognitiveLoadReduction from '../../components/use-cases/user-centered-design/aesthetic-and-minimalist-design/CognitiveLoadReduction.astro';
import SemanticClarity from '../../components/use-cases/user-centered-design/aesthetic-and-minimalist-design/SemanticClarity.astro';
import VisualCleanliness from '../../components/use-cases/user-centered-design/aesthetic-and-minimalist-design/VisualCleanliness.astro';
import GoalFocus from '../../components/use-cases/user-centered-design/aesthetic-and-minimalist-design/GoalFocus.astro';
import PrincipleNav from '../../components/PrincipleNav.astro';

const principle = data.principles.find((p) => p.id === 'aesthetic-and-minimalist-design')!;
const baseUrl = import.meta.env.BASE_URL;
const sectionPath = '/user-centered-design';
const sectionName = 'User-Centered Design';
---

<UseCaseLayout
  title={`${principle.title} / ${sectionName}`}
  principle={principle}
  categoryColors={data.categoryColors}
  sectionName={data.title}
  sectionPath={sectionPath}
>
  <EssentialContent />
  <VisualHierarchy />
  <Consistency />
  <CognitiveLoadReduction />
  <SemanticClarity />
  <VisualCleanliness />
  <GoalFocus />
  <PrincipleNav
    baseUrl={baseUrl}
    currentPrincipleId={principle.id}
    sectionPath={sectionPath}
    allPrinciples={data.principles}
  />
</UseCaseLayout>
