---
import PrincipleLayout from '../../layouts/PrincipleLayout.astro';
import data from '../../data/user-centered-design.json';
import InternalConsistency from '../../components/use-cases/user-centered-design/consistency-and-standards/InternalConsistency.astro';
import ExternalStandards from '../../components/use-cases/user-centered-design/consistency-and-standards/ExternalStandards.astro';
import VisualConsistency from '../../components/use-cases/user-centered-design/consistency-and-standards/VisualConsistency.astro';
import BehavioralConsistency from '../../components/use-cases/user-centered-design/consistency-and-standards/BehavioralConsistency.astro';
import TerminologyConsistency from '../../components/use-cases/user-centered-design/consistency-and-standards/TerminologyConsistency.astro';
import PatternReuse from '../../components/use-cases/user-centered-design/consistency-and-standards/PatternReuse.astro';
import SystemIntegrity from '../../components/use-cases/user-centered-design/consistency-and-standards/SystemIntegrity.astro';
import Nav from '../../components/Nav.astro';
import SectionNav from '../../components/SectionNav.astro';
import PrincipleNav from '../../components/PrincipleNav.astro';
import Bibliography from '../../components/Bibliography.astro';
import BibliographyItem from '../../components/BibliographyItem.astro';
import BibliographySection from '../../components/BibliographySection.astro';

const principle = data.principles.find((p) => p.id === 'consistency-and-standards')!;
const baseUrl = import.meta.env.BASE_URL;
const sectionPath = '/user-centered-design';
const bibliography = (data.bibliography as any)?.[principle.id];
const sectionName = 'User-Centered Design';
---

<PrincipleLayout
  title={`${principle.title} / ${sectionName}`}
  principle={principle}
  categoryColors={data.categoryColors}
  sectionName={data.title}
  sectionPath={sectionPath}
>
  <BehavioralConsistency />
  <ExternalStandards />
  <InternalConsistency />
  <PatternReuse />
  <SystemIntegrity />
  <TerminologyConsistency />
  <VisualConsistency />
  {
    bibliography && (
      <Bibliography>
        {bibliography.books && bibliography.books.length > 0 && (
          <BibliographySection type="books">
            {bibliography.books.map((item: any) => (
              <BibliographyItem
                author={item.author}
                title={item.title}
                description={item.description}
                url={item.url}
                status={item.status}
              />
            ))}
          </BibliographySection>
        )}
        {bibliography.urls && bibliography.urls.length > 0 && (
          <BibliographySection type="urls">
            {bibliography.urls.map((item: any) => (
              <BibliographyItem
                author={item.author}
                title={item.title}
                description={item.description}
                url={item.url}
                status={item.status}
              />
            ))}
          </BibliographySection>
        )}
      </Bibliography>
    )
  }

  <Nav>
    <SectionNav baseUrl={baseUrl} sectionPath={sectionPath} />
    <PrincipleNav
      baseUrl={baseUrl}
      currentPrincipleId={principle.id}
      sectionPath={sectionPath}
      allPrinciples={data.principles}
    />
  </Nav>
</PrincipleLayout>
