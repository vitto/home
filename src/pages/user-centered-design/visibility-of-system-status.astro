---
import PrincipleLayout from '../../layouts/PrincipleLayout.astro';
import data from '../../data/user-centered-design.json';
import LoadingWaiting from '../../components/use-cases/visibility-of-system-status/LoadingWaiting.astro';
import UserActions from '../../components/use-cases/visibility-of-system-status/UserActions.astro';
import BackgroundProcesses from '../../components/use-cases/visibility-of-system-status/BackgroundProcesses.astro';
import ErrorsAndProblems from '../../components/use-cases/visibility-of-system-status/ErrorsAndProblems.astro';
import NavigationAndFlows from '../../components/use-cases/visibility-of-system-status/NavigationAndFlows.astro';
import InputAndValidation from '../../components/use-cases/visibility-of-system-status/InputAndValidation.astro';
import SystemAndSettings from '../../components/use-cases/visibility-of-system-status/SystemAndSettings.astro';

const principle = data.principles.find((p) => p.id === 'visibility-of-system-status')!;
---

<PrincipleLayout
  title={`${principle.title} - Design Systems`}
  principle={principle}
  categoryColors={data.categoryColors}
  sectionName={data.title}
  sectionPath="/design-systems"
>
  <LoadingWaiting />
  <UserActions />
  <BackgroundProcesses />
  <ErrorsAndProblems />
  <NavigationAndFlows />
  <InputAndValidation />
  <SystemAndSettings />
</PrincipleLayout>
