---
import '../styles/global.css';
import { getPreferences } from '../utils/preferences';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'Vittorio - Design System Architect & Senior UX Designer',
  description = 'Crafting scalable human-centered experiences through systematic design thinking.',
} = Astro.props;

// Get base URL from Astro config and normalize it
// Remove trailing slash if present (except for root)
const rawBaseUrl = import.meta.env.BASE_URL;
const baseUrl = rawBaseUrl === '/' ? '' : rawBaseUrl.replace(/\/$/, '');
const preferences = getPreferences(Astro.cookies);
---

<!doctype html>
<html lang="en" class={preferences.theme.selector} style={preferences.theme.style}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href={`${baseUrl}/assets/favicon.svg`} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <script type="module" define:vars={{ baseUrl }}>
      (async () => {
        // Import Maggioli loader from vendor directory
        // First apply polyfills, then load components
        const { applyPolyfills } = await import(
          `${baseUrl}/vendor/maggioli-loader/dist/esm/polyfills/index.js`
        );
        await applyPolyfills();
        const { defineCustomElements } = await import(
          `${baseUrl}/vendor/maggioli-loader/dist/esm/loader.js`
        );
        defineCustomElements();
        window.sessionStorage.setItem('mdsIconSvgPath', `${baseUrl}/icons/`);
      })();
    </script>
  </head>
  <body class="bg-tone-neutral text-tone-neutral-02 antialiased" role="main">
    <slot />
  </body>
</html>
