{
  "name": "vittorio-portfolio",
  "type": "module",
  "version": "1.0.0",
  "scripts": {
    "predev": "npm run icons && npm run copy-vendor",
    "dev": "astro dev --host",
    "icons": "iconsauce --verbose --config ./iconsauce.config.cjs --output-css ./src/styles/iconsauce.css --output-svg ./public/icons",
    "copy-vendor": "node scripts/copy-vendor-assets.js",
    "prestart": "npm run icons && npm run copy-vendor",
    "start": "astro dev",
    "build": "npm run icons && npm run copy-vendor && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "toolbar:hide": "astro preferences disable devToolbar",
    "toolbar:show": "astro preferences enable devToolbar",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:staged": "lint-staged --allow-empty",
    "prepare": "husky"
  },
  "dependencies": {
    "@astrojs/tailwind": "^5.1.0",
    "@maggioli-design-system/magma": "^1.10.7",
    "@maggioli-design-system/styles": "^15.11.0",
    "@react-three/drei": "^10.7.7",
    "astro": "^4.0.0",
    "easing-utils": "^1.0.0",
    "marked": "^17.0.1",
    "postcss-iconsauce": "^1.4.1",
    "react": "^19.2.3",
    "react-three-fiber": "^6.0.13",
    "shiki": "^3.20.0",
    "tailwindcss": "^3.4.0",
    "three": "^0.182.0",
    "zustand": "^5.0.9"
  },
  "lint-staged": {
    "**/*.{astro,js,jsx,ts,tsx,json,css,md,mdx,yml,yaml}": "prettier --write"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@tailwindcss/container-queries": "^0.1.1",
    "@types/marked": "^5.0.2",
    "@types/node": "^20.10.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.1.0",
    "prettier-plugin-astro": "^0.12.0"
  }
}
